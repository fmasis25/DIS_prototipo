@page
@model ProyectoVie.Pages.VieWeb.MenuExtensionistaModel
@{
    ViewData["Title"] = "Menú Extensionista";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Menú Extensionista</title>
    <link rel="stylesheet" href="../css/menue.css">
</head>
<body>
    <!-- Header general del sistema -->
    <header class="header">
        <a href="/">
            <img src="~/css/tec-logo.png" alt="Logo del Tecnológico de Costa Rica" class="tec-logo">
        </a>
        <a href="/VieWeb/MiPerfil">
            <img src="~/css/icons/perfil.svg" alt="Perfil" class="profile-pic" aria-label="Perfil">
        </a>
    </header>

    <div class="sidebar">
        <div class="option">
            <a href="/VieWeb/AgregarPropuesta">
                <img src="~/css/icons/propuesta.svg" alt="Mis Propuestas" alt="Agregar Propuestas">
            </a>
            <span>Agregar Propuestas</span>
        </div>
        <div class="exit-option">
            <a href="/VieWeb/Login">
                <img src="~/css/icons/salir.svg" alt="Salir">
            </a>
            <span>Salir</span>
        </div>
    </div>

    <main class="main-content" role="main" aria-labelledby="propuestas-heading">
        <h1 id="propuestas-heading">Mis Propuestas</h1>

        <div class="propuestas-container" role="table" aria-label="Listado de propuestas">
            <table class="propuestas-table">
                <thead>
                    <tr>
                        <th scope="col">Nombre de la Propuesta</th>
                        <th scope="col">Estado</th>
                        <th scope="col">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var propuesta in Model.Propuestas)
                    {
                        if ((string)propuesta["Estado"] == "Rechazada")
                        {
                            <tr>
                                <td role="cell">@propuesta["NombrePropuesta"]</td>
                                <td role="cell">@propuesta["Estado"]</td>
                                <td role="cell">
                                    <div class="dropdown" role="group" aria-label="Acciones para la propuesta @(propuesta["NombrePropuesta"])">
                                        <button class="dropbtn" aria-haspopup="true" aria-expanded="false" aria-label="Abrir opciones para la propuesta @(propuesta["NombrePropuesta"])">⋮</button>
                                        <div class="dropdown-content">
                                            <a href="/VieWeb/ConsultarPropuesta?propuestaId=@propuesta["ID"]" aria-label="Consultar propuesta @(propuesta["NombrePropuesta"])">Consultar</a>
                                            <a href="/VieWeb/EliminarPropuesta?propuestaId=@propuesta["ID"]" aria-label="Eliminar propuesta @(propuesta["NombrePropuesta"])">Eliminar</a>
                                        </div>
                                    </div>
                                </td>
                            </tr>
                        }
                        else if ((string)propuesta["Estado"] == "Recibida")
                        {
                            <tr>
                                <td role="cell">@propuesta["NombrePropuesta"]</td>
                                <td role="cell">@propuesta["Estado"]</td>
                                <td role="cell">
                                    <div class="dropdown" role="group" aria-label="Acciones para la propuesta @(propuesta["NombrePropuesta"])">
                                        <button class="dropbtn" aria-haspopup="true" aria-expanded="false" aria-label="Abrir opciones para la propuesta @(propuesta["NombrePropuesta"])">⋮</button>
                                        <div class="dropdown-content">
                                            <a href="/VieWeb/ConsultarPropuesta?propuestaId=@propuesta["ID"]" aria-label="Consultar propuesta @(propuesta["NombrePropuesta"])">Consultar</a>
                                            <a href="/VieWeb/ModificarPropuesta?propuestaId=@propuesta["ID"]" aria-label="Modificar propuesta @(propuesta["NombrePropuesta"])">Modificar</a>
                                            <a href="/VieWeb/EliminarPropuesta?propuestaId=@propuesta["ID"]" aria-label="Eliminar propuesta @(propuesta["NombrePropuesta"])">Eliminar</a>
                                        </div>
                                    </div>
                                </td>
                            </tr>
                        }
                        else if ((string)propuesta["Estado"] == "En revisión" || (string)propuesta["Estado"] == "Aceptada")
                        {
                            <tr>
                                <td role="cell">@propuesta["NombrePropuesta"]</td>
                                <td role="cell">@propuesta["Estado"]</td>
                                <td role="cell">
                                    <div class="dropdown" role="group" aria-label="Acciones para la propuesta @(propuesta["NombrePropuesta"])">
                                        <button class="dropbtn" aria-haspopup="true" aria-expanded="false" aria-label="Abrir opciones para la propuesta @(propuesta["NombrePropuesta"])">⋮</button>
                                        <div class="dropdown-content">
                                            <a href="/VieWeb/ConsultarPropuesta?propuestaId=@propuesta["ID"]" aria-label="Consultar propuesta @(propuesta["NombrePropuesta"])">Consultar</a>
                                            <a href="/VieWeb/Calificacion?propuestaId=@propuesta["ID"]" aria-label="Ver calificación de la propuesta @(propuesta["NombrePropuesta"])">Calificación</a>
                                        </div>
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </main>


    <footer class="footer">
        © Tecnológico de Costa Rica
    </footer>
</body>
</html>
