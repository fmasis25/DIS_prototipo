@page
@model ProyectoVie.Pages.VieWeb.MenuExtensionistaModel
@{
    ViewData["Title"] = "Menú Extensionista";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Menú Extensionista</title>
    <link rel="stylesheet" href="../css/menue.css">
</head>
<body>
    <header class="header">
        <a href="/">
            <img src="~/css/tec-logo.jpg" alt="Logo del Tecnológico de Costa Rica" class="tec-logo">
        </a>
        <div class="search-bar">
            <input type="text" placeholder="Buscar..." aria-label="Buscar propuestas">
            <a href="/buscar">
                <img src="~/css/icons/lupa.svg" alt="Buscar" class="icon" aria-hidden="true">
            </a>
            <a href="/perfil">
                <img src="~/css/icons/perfil.svg" alt="Perfil" class="profile-pic" aria-label="Perfil">
            </a>
        </div>
    </header>

    <div class="sidebar">
        <div class="option">
            <a href="/VieWeb/AgregarPropuesta">
                <img src="~/css/pagina.png" alt="Agregar Propuestas">
            </a>
            <span>Agregar Propuestas</span>
        </div>
        <div class="exit-option">
            <a href="/salir">
                <img src="~/css/salir.png" alt="Salir">
            </a>
            <span>Salir</span>
        </div>
    </div>

    <main class="main-content">
        <h1>Mis Propuestas</h1>

        <div class="propuestas-container">
            <table class="propuestas-table">
                <thead>
                    <tr>
                        <th>Nombre de la Propuesta</th>
                        <th>Estado</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var propuesta in Model.Propuestas)
                    {
                        if ((string)propuesta["Estado"] == "Rechazada")
                        {
                            <tr>
                                <td>@propuesta["NombrePropuesta"]</td>
                                <td>@propuesta["Estado"]</td>
                                <td>
                                    <div class="dropdown">
                                        <button class="dropbtn">⋮</button>
                                        <div class="dropdown-content">
                                            <a href="/VieWeb/ConsultarPropuesta?propuestaId=@propuesta["ID"]">Consultar</a>
                                            <a href="/VieWeb/EliminarPropuesta?propuestaId=@propuesta["ID"]">Eliminar</a>
                                        </div>
                                    </div>
                                </td>
                            </tr>
                        }
                        else if ((string)propuesta["Estado"] == "Recibida")
                        {
                            <tr>
                                <td>@propuesta["NombrePropuesta"]</td>
                                <td>@propuesta["Estado"]</td>
                                <td>
                                    <div class="dropdown">
                                        <button class="dropbtn">⋮</button>
                                        <div class="dropdown-content">
                                            <a href="/VieWeb/ConsultarPropuesta?propuestaId=@propuesta["ID"]">Consultar</a>
                                            <a href="/propuesta/editar/@propuesta["ID"]">Editar</a>
                                            <a href="/VieWeb/EliminarPropuesta?propuestaId=@propuesta["ID"]">Eliminar</a>
                                        </div>
                                    </div>
                                </td>
                            </tr>
                        }
                        else if ((string)propuesta["Estado"] == "En revisión" || (string)propuesta["Estado"] == "Aceptada")
                        {
                            <tr>
                                <td>@propuesta["NombrePropuesta"]</td>
                                <td>@propuesta["Estado"]</td>
                                <td>
                                    <div class="dropdown">
                                        <button class="dropbtn">⋮</button>
                                        <div class="dropdown-content">
                                            <a href="/VieWeb/ConsultarPropuesta?propuestaId=@propuesta["ID"]">Consultar</a>
                                            <a href="/VieWeb/Calificacion?propuestaId=@propuesta["ID"]">Calificación</a>
                                        </div>
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </main>

    <footer class="footer">
        © Tecnológico de Costa Rica
    </footer>
</body>
</html>
