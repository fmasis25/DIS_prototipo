@page
@model ProyectoVie.Pages.VieWeb.MiPerfilModel
@{
    ViewData["Title"] = "Mi Perfil";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Mi Perfil</title>
    <link rel="stylesheet" href="../css/perfil.css">
</head>
<body>

    <!-- Header general del sistema -->
    <header class="header">
        <a href="/"><img src="~/css/tec-logo.png" alt="Logo del Tecnológico de Costa Rica" class="tec-logo"></a>
        <a href="/perfil"><img src="~/css/icons/perfil.svg" alt="Perfil" class="profile-pic" aria-label="Perfil"></a>
    </header>

    <!-- Sidebar -->
    <div class="sidebar">
        <div class="exit-option">
            <a href="/VieWeb/Login"><img src="~/css/icons/salir.svg" alt="Salir"></a>
            <span>Salir</span>
        </div>
    </div>

    <!-- Main content -->
    <main class="main-content">
        <h1>Mi Perfil</h1>

        @if (!string.IsNullOrEmpty(Model.ErrorMessage))
        {
            <div class="message-error">@Model.ErrorMessage</div>
        }

        @if (!string.IsNullOrEmpty(Model.SuccessMessage))
        {
            <div class="message-success">@Model.SuccessMessage</div>
        }

        <!-- Contenedor del perfil -->
        <div class="perfil-container">
            <table class="perfil-table">
                <tr>
                    <td>Nombre:</td>
                    <td>@Model.Nombre</td>
                </tr>
                <tr>
                    <td>Apellido:</td>
                    <td>@Model.Apellido</td>
                </tr>
                <tr>
                    <td>Correo:</td>
                    <td>@Model.Correo</td>
                </tr>
                <tr>
                    <td>Contraseña:</td>
                    <td>@Model.Contrasena</td> <!-- Mostrar la contraseña visible -->
                </tr>
            </table>
        </div>
    </main>
</body>
</html>
