@page
@model ProyectoVie.Pages.VieWeb.MiPerfilModel
@{
    ViewData["Title"] = "Mi Perfil";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Mi Perfil</title>
    <link rel="stylesheet" href="../css/perfil.css">
</head>
<body>

    <!-- Header general del sistema -->
    <header class="header">
        <a href="/"><img src="~/css/tec-logo.png" alt="Logo del Tecnológico de Costa Rica" class="tec-logo"></a>
        <a href="/perfil"><img src="~/css/icons/perfil.svg" alt="Perfil" class="profile-pic" aria-label="Perfil"></a>
    </header>

    <!-- Sidebar -->
    <nav class="sidebar" role="navigation" aria-label="Menú lateral">
        <div class="exit-option">
            <a href="/VieWeb/Login" aria-label="Cerrar sesión"><img src="~/css/icons/salir.svg" alt="Salir"></a>
            <span>Salir</span>
        </div>
    </nav>

    <!-- Main content -->
    <main class="main-content" role="main" aria-labelledby="perfil-heading">
        <h1 id="perfil-heading">Mi Perfil</h1>

        @if (!string.IsNullOrEmpty(Model.ErrorMessage))
        {
            <div class="message-error" role="alert">@Model.ErrorMessage</div>
        }

        @if (!string.IsNullOrEmpty(Model.SuccessMessage))
        {
            <div class="message-success" role="status">@Model.SuccessMessage</div>
        }

        <!-- Contenedor del perfil -->
        <section class="perfil-container" aria-labelledby="perfil-info-heading">
            <h2 id="perfil-info-heading" class="sr-only">Información del perfil</h2> <!-- Oculto visualmente pero accesible -->
            <table class="perfil-table" role="table">
                <thead class="sr-only">
                    <!-- Ocultar visualmente el encabezado para usuarios de lectores de pantalla -->
                    <tr>
                        <th scope="col">Campo</th>
                        <th scope="col">Valor</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td scope="row">Nombre:</td>
                        <td>@Model.Nombre</td>
                    </tr>
                    <tr>
                        <td scope="row">Apellido:</td>
                        <td>@Model.Apellido</td>
                    </tr>
                    <tr>
                        <td scope="row">Correo:</td>
                        <td>@Model.Correo</td>
                    </tr>
                    <tr>
                        <td scope="row">Contraseña:</td>
                        <td>@Model.Contrasena</td> <!-- Mostrar la contraseña visible -->
                    </tr>
                </tbody>
            </table>
        </section>
    </main>
</body>
</html>