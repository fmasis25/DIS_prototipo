@page
@model ProyectoVie.Pages.VieWeb.MiPerfilModel
@{
    ViewData["Title"] = "Mi Perfil";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Mi Perfil</title>
    <link rel="stylesheet" href="../css/perfil.css">
</head>
<body>

    <!-- Header general del sistema -->
    <header class="header">
        <a href="/">
            <img src="~/css/tec-logo.png" alt="Logo del Tecnológico de Costa Rica" class="tec-logo">
        </a>
        <a href="/perfil">
            <img src="~/css/icons/perfil.svg" alt="Perfil" class="profile-pic" aria-label="Perfil">
        </a>
    </header>

    <!-- Sidebar -->
    <div class="sidebar">
        @if (Model.Rol == 1)
        {
            <div class="option">
                <a href="/VieWeb/MenuExtensionista">
                    <img src="~/css/icons/propuesta.svg" alt="Mis Propuestas">
                </a>
                <span>Mis Propuestas</span>
            </div>
            <div class="exit-option">
                <a href="/VieWeb/Login">
                    <img src="~/css/icons/salir.svg" alt="Salir">
                </a>
                <span>Salir</span>
            </div>
        }
        else if (Model.Rol == 2)
        {
            <div class="option">
                <a href="/VieWeb/MenuAdmin">
                    <img src="~/css/icons/propuesta.svg" alt="Mis Propuestas">
                </a>
                <span>Propuestas</span>
            </div>
            <div class="option">
                <a href="/VieWeb/Usuarios">
                    <img src="~/css/icons/usuarios.svg" alt="Usuarios">
                </a>
                <span>Usuarios</span>
            </div>
            <div class="option">
                <a href="/VieWeb/Graficos">
                    <img src="~/css/icons/estadisticas.svg" alt="Estadísticas">
                </a>
                <span>Estadísticas</span>
            </div>
            <div class="exit-option">
                <a href="/VieWeb/Login">
                    <img src="~/css/icons/salir.svg" alt="Salir">
                </a>
                <span>Salir</span>
            </div>
        }
    </div>

    <!-- Main content -->
    <main class="main-content">
        <h1>Mi Perfil</h1>

        @if (!string.IsNullOrEmpty(Model.ErrorMessage))
        {
            <div style="color:red">@Model.ErrorMessage</div>
        }

        @if (!string.IsNullOrEmpty(Model.SuccessMessage))
        {
            <div style="color:green">@Model.SuccessMessage</div>
        }

        <form method="post">
            <div class="form-field">
                <label for="Nombre">Nombre:</label>
                <input type="text" id="Nombre" name="Nombre" value="@Model.Nombre" required />
            </div>
            <div class="form-field">
                <label for="Apellido">Apellido:</label>
                <input type="text" id="Apellido" name="Apellido" value="@Model.Apellido" required />
            </div>
            <div class="form-field">
                <label for="Correo">Correo:</label>
                <input type="email" id="Correo" name="Correo" value="@Model.Correo" required />
            </div>
            <div class="form-field">
                <label for="Contrasena">Contraseña:</label>
                <input type="password" id="Contrasena" name="Contrasena" value="@Model.Contrasena" required />
            </div>

            <button type="submit" class="btn-guardar">Guardar Cambios</button>
        </form>
    </main>
</body>
</html>
