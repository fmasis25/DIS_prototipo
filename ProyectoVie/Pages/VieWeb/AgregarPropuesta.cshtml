@page
@model ProyectoVie.Pages.VieWeb.AgregarPropuestaModel
@{
    ViewData["Title"] = "Registro de Propuestas";
}
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="https://fonts.googleapis.com/css2?family=Nunito:wght@400;600&display=swap" rel="stylesheet">
    <title>Sistema de Propuestas - Registro</title>
    <style>
        body {
            font-family: 'Nunito', sans-serif;
            margin: 0;
            padding: 0;
            display: flex;
            height: 100vh;
            overflow: hidden;
        }

        .header {
            display: flex;
            justify-content: space-between; /* Asegura que el logo y el ícono del perfil estén en lados opuestos */
            align-items: center;
            background-color: #d9d9d9;
            padding: 10px 20px;
            border-bottom: 2px solid #000;
            position: fixed;
            width: 100%;
            top: 0;
            height: 60px;
            z-index: 1000;
            box-sizing: border-box;
        }

        .tec-logo {
            height: 50px;
            width: auto;
            margin-right: 20px;
        }

        .profile-pic {
            width: 40px;
            height: auto;
            margin-left: auto;
            margin-right: 0; /* Asegúrate de que no haya margen derecho que desplace el ícono */
        }

        .sidebar {
            width: 180px; /* Ajusto un poco el ancho */
            background-color: #0a4275;
            color: white;
            padding: 15px;
            position: fixed;
            height: 100%;
            top: 60px;
            left: 0;
            display: flex;
            flex-direction: column;
            justify-content: flex-start; /* Distribuye bien las opciones */
            align-items: flex-start; /* Alineado a la izquierda para mejor lectura */
            z-index: 1000;
        }

            .sidebar .option, .sidebar .exit-option {
                display: flex;
                flex-direction: row;
                align-items: center;
                margin: 15px 0; /* Reducimos un poco el margen para compactar */
            }

            .sidebar .exit-option {
                margin-bottom: 20px;
            }

                .sidebar .option a img, .sidebar .exit-option a img {
                    width: 30px; /* Íconos más pequeños para un look más limpio */
                    height: auto;
                    margin-right: 10px; /* Espacio entre ícono y texto */
                }

                .sidebar .option span, .sidebar .exit-option span {
                    font-size: 16px; /* Mantener el texto legible */
                    text-align: left;
                }

        .main-content {
            margin-left: 220px;
            padding: 20px;
            margin-top: 60px;
            overflow-y: auto;
            height: calc(100vh - 60px);
        }

        .form-container {
            background-color: #ececec;
            border-radius: 10px;
            padding: 20px;
        }

        .form-field {
            margin-bottom: 30px;
        }

        textarea {
            width: 100%;
            height: 120px;
            padding: 10px;
            border: 1px solid #ccc;
            border-radius: 5px;
            resize: vertical;
        }

        .form-field textarea {
            height: 150px;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-bottom: 30px;
        }

        th, td {
            border: 1px solid #ccc;
            padding: 10px;
            text-align: left;
        }

        th {
            background-color: #f2f2f2;
        }

        button {
            padding: 10px 15px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            margin-right: 10px;
        }

        .btn-submit {
            background-color: #28a745;
            color: white;
            padding: 15px 20px;
            font-size: 16px;
        }

        .btn-add {
            background-color: #28a745;
            color: white;
        }

        .btn-remove {
            background-color: #dc3545;
            color: white;
        }

        h1 {
            font-size: 35px;
            text-align: center;
            margin-bottom: 20px;
        }
    </style>
</head>
<body>
    <!-- Header general del sistema -->
    <header class="header">
        <a href="/">
            <img src="~/css/tec-logo.png" alt="Logo del Tecnológico de Costa Rica" class="tec-logo">
        </a>
        <a href="/VieWeb/MiPerfil">
            <img src="~/css/icons/perfil.svg" alt="Perfil" class="profile-pic" aria-label="Perfil">
        </a>
    </header>

    <div class="sidebar">
        <div class="option">
            <a href="/VieWeb/MenuExtensionista">
                <img src="~/css/icons/propuesta.svg" alt="Mis Propuestas" alt="Mis Propuestas">
            </a>
            <span>Mis Propuestas</span>
        </div>
        <div class="exit-option">
            <a href="/VieWeb/Login">
                <img src="~/css/icons/salir.svg" alt="Salir">
            </a>
            <span>Salir</span>
        </div>
    </div>

    <div class="main-content">
        <div class="form-container">
            <h1>Inscripción de Proyectos de Extensión</h1>
            <form id="propuestaForm" method="post" enctype="multipart/form-data" onsubmit="return mostrarDatos(event)">
                <h2>DATOS INSTANCIA ACADÉMICA</h2>
                <div class="form-field">
                    <label for="agreement-number">Número acuerdo de escuela coordinadora:</label>
                    <input type="text" id="agreement-number" name="IdentificacionAcuerdo" required />
                </div>
                <div class="form-field">
                    <label for="approval-date">Fecha de aprobación:</label>
                    <input type="date" id="approval-date" name="FechaAprobacion" required />
                </div>
                <div class="form-field">
                    <label for="project-description">Descripción del proyecto:</label>
                    <textarea id="project-description" name="Descripcion" required></textarea>
                </div>

                <h2>DATOS DEL PROYECTO</h2>
                <div class="form-field">
                    <label for="project-name">Nombre del proyecto:</label>
                    <input type="text" id="project-name" name="NombreProyecto" required />
                </div>
                <div class="form-field">
                    <label for="extension-type">Tipo de extensión:</label>
                    <input type="text" id="extension-type" name="TipoExtension" required />
                </div>
                <div class="form-field">
                    <label for="sustainable-goals">Objetivo de Desarrollo Sostenible (ODS):</label>
                    <textarea id="sustainable-goals" name="ObjetivoDesarrolloSostenible" required></textarea>
                </div>

                <h2>DATOS DEL GRUPO EXTENSIONISTA</h2>
                <div id="extensionist-section">
                    <table>
                        <thead>
                            <tr>
                                <th>Nombre</th>
                                <th>Apellido</th>
                                <th>Tipo de Nombramiento</th>
                                <th>Condición</th>
                                <th>Fecha Inicio</th>
                                <th>Fecha Fin</th>
                                <th>Acciones</th>
                            </tr>
                        </thead>
                        <tbody id="extensionist-table-body">
                            <tr>
                                <td><input type="text" name="Extensionists[0].Nombre" placeholder="Nombre" required /></td>
                                <td><input type="text" name="Extensionists[0].Apellido" placeholder="Apellido" required /></td>
                                <td><input type="text" name="Extensionists[0].TipoNombramiento" placeholder="Tipo de Nombramiento" required /></td>
                                <td><input type="text" name="Extensionists[0].Condicion" placeholder="Condición" required /></td>
                                <td><input type="date" name="Extensionists[0].FechaInicio" required /></td>
                                <td><input type="date" name="Extensionists[0].FechaFin" required /></td>
                                <td><button type="button" class="btn-remove" onclick="removeExtensionistRow(this)">Quitar</button></td>
                            </tr>
                        </tbody>
                    </table>
                    <button type="button" class="btn-add" onclick="addExtensionistRow()">Agregar Extensionista</button>
                </div>

                <h2>DATOS DE INSTITUCIONES, ORGANIZACIONES O EMPRESAS PARTICIPANTES</h2>
                <div id="organization-section">
                    <table>
                        <thead>
                            <tr>
                                <th>Institución u Organización</th>
                                <th>Contacto (Correo Electrónico y/o Teléfono)</th>
                                <th>Acciones</th>
                            </tr>
                        </thead>
                        <tbody id="organization-table-body">
                            <tr>
                                <td><input type="text" name="Organizations[0].Organizacion" placeholder="Institución u Organización" required /></td>
                                <td><input type="text" name="Organizations[0].Contacto" placeholder="Correo Electrónico y/o Teléfono" required /></td>
                                <td><button type="button" class="btn-remove" onclick="removeOrganizationRow(this)">Quitar</button></td>
                            </tr>
                        </tbody>
                    </table>
                    <button type="button" class="btn-add" onclick="addOrganizationRow()">Agregar Organización</button>
                </div>

                <h2>DECLARACIÓN FINAL DE LA PROPUESTA</h2>
                <div class="form-field">
                    <label for="proposal-final">Declaración final:</label>
                    <textarea id="proposal-final" name="DeclaracionFinal" required></textarea>
                </div>

                <div class="form-field">
                    <label for="pdf-upload">Subir archivo PDF:</label>
                    <input type="file" id="pdf-upload" name="PdfFile" accept="application/pdf" required />
                </div>

                <div class="form-field">
                    <button type="submit" class="btn-submit">Enviar Propuesta</button>
                </div>
            </form>
        </div>
    </div>

    <script>
        let extensionistCount = 1;
        function addExtensionistRow() {
            const tableBody = document.getElementById('extensionist-table-body');
            const newRow = document.createElement('tr');
            newRow.innerHTML =
                `<td><input type="text" name="Extensionists[${extensionistCount}].Nombre" placeholder="Nombre" required /></td>
                <td><input type="text" name="Extensionists[${extensionistCount}].Apellido" placeholder="Apellido" required /></td>
                <td><input type="text" name="Extensionists[${extensionistCount}].TipoNombramiento" placeholder="Tipo de Nombramiento" required /></td>
                <td><input type="text" name="Extensionists[${extensionistCount}].Condicion" placeholder="Condición" required /></td>
                <td><input type="date" name="Extensionists[${extensionistCount}].FechaInicio" required /></td>
                <td><input type="date" name="Extensionists[${extensionistCount}].FechaFin" required /></td>
                <td><button type="button" class="btn-remove" onclick="removeExtensionistRow(this)">Quitar</button></td>`;
            tableBody.appendChild(newRow);
            extensionistCount++;
        }

        function removeExtensionistRow(button) {
            const row = button.closest('tr');
            row.remove();
        }

        let organizationCount = 1;
        function addOrganizationRow() {
            const tableBody = document.getElementById('organization-table-body');
            const newRow = document.createElement('tr');
            newRow.innerHTML =
                `<td><input type="text" name="Organizations[${organizationCount}].Organizacion" placeholder="Institución u Organización" required /></td>
                <td><input type="text" name="Organizations[${organizationCount}].Contacto" placeholder="Correo Electrónico y/o Teléfono" required /></td>
                <td><button type="button" class="btn-remove" onclick="removeOrganizationRow(this)">Quitar</button></td>`;
            tableBody.appendChild(newRow);
            organizationCount++;
        }

        function removeOrganizationRow(button) {
            const row = button.closest('tr');
            row.remove();
        }

        function mostrarDatos(event) {
            const formData = new FormData(document.getElementById('propuestaForm'));
            console.log([...formData.entries()]);
            alert("Datos enviados exitosamente");
        }
    </script>
</body>
</html>
