@page
@model ProyectoVie.Pages.VieWeb.AgregarPropuestaModel
@{
    ViewData["Title"] = "Registro de Propuestas";
}
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="https://fonts.googleapis.com/css2?family=Nunito:wght@400;600&display=swap" rel="stylesheet">
    <title>Sistema de Propuestas - Registro</title>
    <style>
        body {
            font-family: 'Nunito', sans-serif;
            margin: 0;
            padding: 0;
            display: flex;
            height: 100vh;
            overflow: hidden;
        }

        .header {
            display: flex;
            justify-content: space-between; 
            align-items: center;
            background-color: #d9d9d9;
            padding: 10px 20px;
            border-bottom: 2px solid #000;
            position: fixed;
            width: 100%;
            top: 0;
            height: 60px;
            z-index: 1000;
            box-sizing: border-box;
        }

        .tec-logo {
            height: 50px;
            width: auto;
            margin-right: 20px;
        }

        .profile-pic {
            width: 40px;
            height: auto;
            margin-left: auto;
            margin-right: 0; 
        }

        .sidebar {
            width: 180px; 
            background-color: #0a4275;
            color: white;
            padding: 15px;
            position: fixed;
            height: 100%;
            top: 60px;
            left: 0;
            display: flex;
            flex-direction: column;
            justify-content: flex-start; 
            align-items: flex-start;
            z-index: 1000;
        }

        .sidebar .option, .sidebar .exit-option {
            display: flex;
            flex-direction: row;
            align-items: center;
            margin: 15px 0; 
        }

        .sidebar .exit-option {
            margin-bottom: 20px;
        }

        .sidebar .option a img, .sidebar .exit-option a img {
            width: 30px; 
            height: auto;
            margin-right: 10px; 
        }

        .sidebar .option span, .sidebar .exit-option span {
            font-size: 16px;
            text-align: left;
        }

        .main-content {
            margin-left: 220px;
            padding: 20px;
            margin-top: 60px;
            overflow-y: auto;
            height: calc(100vh - 60px);
        }

        .form-container {
            background-color: #ececec;
            border-radius: 10px;
            padding: 20px;
        }

        .form-field {
            margin-bottom: 30px;
        }

        textarea {
            width: 100%;
            height: 120px;
            padding: 10px;
            border: 1px solid #ccc;
            border-radius: 5px;
            resize: vertical;
        }

        .form-field textarea {
            height: 150px;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-bottom: 30px;
        }

        th, td {
            border: 1px solid #ccc;
            padding: 10px;
            text-align: left;
        }

        th {
            background-color: #f2f2f2;
        }

        button {
            padding: 10px 15px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            margin-right: 10px;
        }

        .btn-submit {
            background-color: #28a745;
            color: white;
            padding: 15px 20px;
            font-size: 16px;
        }

        .btn-add {
            background-color: #28a745;
            color: white;
        }

        .btn-remove {
            background-color: #dc3545;
            color: white;
        }

        h1 {
            font-size: 35px;
            text-align: center;
            margin-bottom: 20px;
        }
    </style>
</head>
<body>
    <!-- Header general del sistema -->
    <header class="header">
        <a href="/">
            <img src="~/css/tec-logo.png" alt="Logo del Tecnológico de Costa Rica" class="tec-logo">
        </a>
        <a href="/VieWeb/MiPerfil">
            <img src="~/css/icons/perfil.svg" alt="Perfil" class="profile-pic" aria-label="Mi Perfil">
        </a>
    </header>

    <div class="sidebar">
        <div class="option">
            <a href="/VieWeb/MenuExtensionista" aria-label="Ver mis propuestas">
                <img src="~/css/icons/propuesta.svg" alt="Mis Propuestas" >
            </a>
            <span>Mis Propuestas</span>
        </div>
        <div class="exit-option">
            <a href="/VieWeb/Login" aria-label="Cerrar sesión">
                <img src="~/css/icons/salir.svg" alt="Salir">
            </a>
            <span>Salir</span>
        </div>
    </div>

    <div class="main-content">
        <div class="form-container">
            <h1>Inscripción de Proyectos de Extensión</h1>
            <form id="propuestaForm" method="post" enctype="multipart/form-data" onsubmit="return mostrarDatos(event)">
                <h2>DATOS INSTANCIA ACADÉMICA</h2>
                <div class="form-field">
                    <label for="agreement-number">Número acuerdo de escuela coordinadora:</label>
                    <input type="text" id="agreement-number" name="IdentificacionAcuerdo" required aria-describedby="agreementHelp" />
                    <span id="agreementHelp">Introduce el número del acuerdo de la escuela coordinadora.</span>
                </div>

                <div class="form-field">
                    <label for="school">Escuela:</label>
                    <select id="school" name="Escuela" required aria-describedby="schoolHelp">
                        <option value="Escuela de Ingeniería Civil">Escuela de Ingeniería Civil</option>
                        <option value="Escuela de Ingeniería Eléctrica">Escuela de Ingeniería Eléctrica</option>
                        <option value="Escuela de Ingeniería Mecánica">Escuela de Ingeniería Mecánica</option>
                        <option value="Escuela de Ingeniería en Computación">Escuela de Ingeniería en Computación</option>
                        <option value="Escuela de Ciencias de la Computación">Escuela de Ciencias de la Computación</option>
                        <option value="Escuela de Ingeniería Industrial">Escuela de Ingeniería Industrial</option>
                        <option value="Escuela de Ingeniería Química">Escuela de Ingeniería Química</option>
                        <option value="Escuela de Ingeniería en Construcción">Escuela de Ingeniería en Construcción</option>
                        <option value="Escuela de Arquitectura">Escuela de Arquitectura</option>
                        <option value="Escuela de Física">Escuela de Física</option>
                        <option value="Escuela de Matemática">Escuela de Matemática</option>
                        <option value="Escuela de Estadística">Escuela de Estadística</option>
                        <option value="Escuela de Química">Escuela de Química</option>
                        <option value="Escuela de Biología">Escuela de Biología</option>
                        <option value="Escuela de Ciencias de la Tierra">Escuela de Ciencias de la Tierra</option>
                        <option value="Escuela de Administración de Empresas">Escuela de Administración de Empresas</option>
                        <option value="Escuela de Contaduría Pública">Escuela de Contaduría Pública</option>
                        <option value="Escuela de Economía">Escuela de Economía</option>
                        <option value="Escuela de Psicología">Escuela de Psicología</option>
                        <option value="Escuela de Filosofía">Escuela de Filosofía</option>
                        <option value="Escuela de Historia">Escuela de Historia</option>
                        <option value="Escuela de Literatura">Escuela de Literatura</option>
                        <option value="Escuela de Ciencias Políticas">Escuela de Ciencias Políticas</option>
                        <option value="Escuela de Relaciones Internacionales">Escuela de Relaciones Internacionales</option>
                        <option value="Escuela de Derecho">Escuela de Derecho</option>
                    </select>
                    <span id="schoolHelp">Selecciona la escuela a la que está asociada el proyecto.</span>
                </div>

                <div class="form-field">
                    <label for="approval-date">Fecha de aprobación:</label>
                    <input type="date" id="approval-date" name="FechaAprobacion" required aria-describedby="approvalDateHelp" />
                    <span id="approvalDateHelp">Selecciona la fecha de aprobación del proyecto.</span>
                </div>

                <h2>Descripción y Generalidades</h2>
                <div class="form-field">
                    <label for="project-description">Descripción del proyecto:</label>
                    <textarea id="project-description" name="Descripcion" required aria-describedby="projectDescriptionHelp"></textarea>
                    <span id="projectDescriptionHelp">Describe los detalles principales del proyecto de extensión.</span>
                </div>

                <div class="form-field">
                    <label for="introduction">Introducción:</label>
                    <textarea id="introduction" name="Introduccion" required aria-describedby="introductionHelp"></textarea>
                    <span id="introductionHelp">Introduce los antecedentes y el contexto del proyecto de extensión.</span>
                </div>

                <div class="form-field">
                    <label for="professional-profiles">Perfiles Profesionales:</label>
                    <textarea id="professional-profiles" name="PerfilesProfesionales" required aria-describedby="professionalProfilesHelp"></textarea>
                    <span id="professionalProfilesHelp">Describe los perfiles profesionales necesarios para el proyecto.</span>
                </div>

                <div class="form-field">
                    <label for="student-participation">Participación Estudiantil:</label>
                    <textarea id="student-participation" name="ParticipacionEstudiantil" required aria-describedby="studentParticipationHelp"></textarea>
                    <span id="studentParticipationHelp">Explica la participación estudiantil en el proyecto de extensión.</span>
                </div>

                <div class="form-field">
                    <label for="compliance-risks">Riesgos de Cumplimiento:</label>
                    <textarea id="compliance-risks" name="RiesgosCumplimiento" required aria-describedby="complianceRisksHelp"></textarea>
                    <span id="complianceRisksHelp">Identifica posibles riesgos de cumplimiento para el proyecto.</span>
                </div>

                <div class="form-field">
                    <label for="financial-viability">Viabilidad Financiera:</label>
                    <textarea id="financial-viability" name="ViabilidadFinanciera" required aria-describedby="financialViabilityHelp"></textarea>
                    <span id="financialViabilityHelp">Explica la viabilidad financiera del proyecto.</span>
                </div>

                <div class="form-field">
                    <label for="social-impact">Impacto Social:</label>
                    <textarea id="social-impact" name="ImpactoSocial" required aria-describedby="socialImpactHelp"></textarea>
                    <span id="socialImpactHelp">Describe el impacto social esperado del proyecto.</span>
                </div>

                <div class="form-field">
                    <label for="academic-impact">Impacto Académico:</label>
                    <textarea id="academic-impact" name="ImpactoAcademico" required aria-describedby="academicImpactHelp"></textarea>
                    <span id="academicImpactHelp">Describe el impacto académico esperado del proyecto.</span>
                </div>

                <h2>DATOS DEL PROYECTO</h2>
                <div class="form-field">
                    <label for="project-name">Nombre del proyecto:</label>
                    <input type="text" id="project-name" name="NombreProyecto" required aria-describedby="projectNameHelp" />
                    <span id="projectNameHelp">Introduce el nombre del proyecto de extensión.</span>
                </div>
                <div class="form-field">
                    <label for="extension-type">Tipo de extensión:</label>
                    <input type="text" id="extension-type" name="TipoExtension" required aria-describedby="extensionTypeHelp" />
                    <span id="extensionTypeHelp">Especifica el tipo de extensión del proyecto.</span>
                </div>

                <div class="form-field">
                    <label for="sustainable-goals">Objetivos de Desarrollo Sostenible (ODS):</label>
                    <select id="sustainable-goals" name="ObjetivoDesarrolloSostenible" required aria-describedby="sustainableGoalsHelp">
                        <option value="ODS 1 - Fin de la pobreza">ODS 1 - Fin de la pobreza</option>
                        <option value="ODS 2 - Hambre cero">ODS 2 - Hambre cero</option>
                        <option value="ODS 3 - Salud y bienestar">ODS 3 - Salud y bienestar</option>
                        <option value="ODS 4 - Educación de calidad">ODS 4 - Educación de calidad</option>
                        <option value="ODS 5 - Igualdad de género">ODS 5 - Igualdad de género</option>
                        <option value="ODS 6 - Agua limpia y saneamiento">ODS 6 - Agua limpia y saneamiento</option>
                        <option value="ODS 7 - Energía asequible y no contaminante">ODS 7 - Energía asequible y no contaminante</option>
                        <option value="ODS 8 - Trabajo decente y crecimiento económico">ODS 8 - Trabajo decente y crecimiento económico</option>
                        <option value="ODS 9 - Industria, innovación e infraestructura">ODS 9 - Industria, innovación e infraestructura</option>
                        <option value="ODS 10 - Reducción de las desigualdades">ODS 10 - Reducción de las desigualdades</option>
                        <option value="ODS 11 - Ciudades y comunidades sostenibles">ODS 11 - Ciudades y comunidades sostenibles</option>
                        <option value="ODS 12 - Producción y consumo responsables">ODS 12 - Producción y consumo responsables</option>
                        <option value="ODS 13 - Acción por el clima">ODS 13 - Acción por el clima</option>
                        <option value="ODS 14 - Vida submarina">ODS 14 - Vida submarina</option>
                        <option value="ODS 15 - Vida de ecosistemas terrestres">ODS 15 - Vida de ecosistemas terrestres</option>
                        <option value="ODS 16 - Paz, justicia e instituciones sólidas">ODS 16 - Paz, justicia e instituciones sólidas</option>
                        <option value="ODS 17 - Alianzas para lograr los objetivos">ODS 17 - Alianzas para lograr los objetivos</option>
                    </select>
                    <span id="sustainableGoalsHelp">Selecciona el ODS relacionado con el proyecto.</span>
                </div>

    
                <h2>DATOS DEL GRUPO EXTENSIONISTA</h2>
                <div id="extensionist-section">
                    <table>
                        <thead>
                            <tr>
                                <th>Nombre</th>
                                <th>Apellido</th>
                                <th>Tipo de Nombramiento</th>
                                <th>Condición</th>
                                <th>Fecha Inicio</th>
                                <th>Fecha Fin</th>
                                <th>Acciones</th>
                            </tr>
                        </thead>
                        <tbody id="extensionist-table-body">
                            <tr>
                                <td><input type="text" name="Extensionists[0].Nombre" placeholder="Nombre" required aria-label="Nombre del extensionista" /></td>
                                <td><input type="text" name="Extensionists[0].Apellido" placeholder="Apellido" required aria-label="Apellido del extensionista" /></td>
                                <td><input type="text" name="Extensionists[0].TipoNombramiento" placeholder="Tipo de Nombramiento" required aria-label="Tipo de nombramiento" /></td>
                                <td><input type="text" name="Extensionists[0].Condicion" placeholder="Condición" required aria-label="Condición del extensionista" /></td>
                                <td><input type="date" name="Extensionists[0].FechaInicio" required aria-label="Fecha de inicio del nombramiento" /></td>
                                <td><input type="date" name="Extensionists[0].FechaFin" required aria-label="Fecha de fin del nombramiento" /></td>
                                <td><button type="button" class="btn-remove" onclick="removeExtensionistRow(this)" aria-label="Quitar extensionista">Quitar</button></td>
                            </tr>
                        </tbody>
                    </table>
                    <button type="button" class="btn-add" onclick="addExtensionistRow()" aria-label="Agregar extensionista">Agregar Extensionista</button>
                </div>

                <h2>DATOS DE INSTITUCIONES, ORGANIZACIONES O EMPRESAS PARTICIPANTES</h2>
                <div id="organization-section">
                    <table>
                        <thead>
                            <tr>
                                <th>Institución u Organización</th>
                                <th>Contacto (Correo Electrónico y/o Teléfono)</th>
                                <th>Acciones</th>
                            </tr>
                        </thead>
                        <tbody id="organization-table-body">
                            <tr>
                                <td><input type="text" name="Organizations[0].Organizacion" placeholder="Institución u Organización" required aria-label="Nombre de la organización" /></td>
                                <td><input type="text" name="Organizations[0].Contacto" placeholder="Correo Electrónico y/o Teléfono" required aria-label="Contacto de la organización" /></td>
                                <td><button type="button" class="btn-remove" onclick="removeOrganizationRow(this)" aria-label="Quitar organización">Quitar</button></td>
                            </tr>
                        </tbody>
                    </table>
                    <button type="button" class="btn-add" onclick="addOrganizationRow()" aria-label="Agregar organización">Agregar Organización</button>
                </div>

                <h2>DECLARACIÓN FINAL DE LA PROPUESTA</h2>
                <div class="form-field">
                    <label for="proposal-final">Declaración final:</label>
                    <textarea id="proposal-final" name="DeclaracionFinal" readonly aria-describedby="finalDeclarationHelp">
El presente proyecto de extensión no ha sido presentado a otra institución nacional e internacional, salvo su cofinanciamiento, por lo que, se declara que es de autoría propia y no transgrede norma ética y moral alguna, en razón de ello no causa perjurio ni al ITCR, ni a terceros. Igualmente, en el presente acto, los autores del presente proyecto de extensión, se hacen responsables por las posibles sanciones civiles o penales que se lleguen a determinar a través del proceso administrativo o judicial correspondiente, en caso de que, un tercero así alegue y se demuestre la titularidad de los derechos intelectuales de éste; en razón de lo anterior, el autor (es) exonera de toda pena y responsabilidad a la Dirección de Extensión y al Tecnológico de Costa Rica de cualquier evento que pueda presentarse.
    </textarea>
                    <span id="finalDeclarationHelp">Esta declaración es requerida para la propuesta.</span>
                </div>

                <div class="form-field">
                    <input type="checkbox" id="declaration-confirm" required aria-describedby="confirmHelp">
                    <label for="declaration-confirm">He leído y acepto la declaración final.</label>
                    <span id="confirmHelp">Debe aceptar la declaración antes de enviar el formulario.</span>
                </div>


                <div class="form-field">
                    <label for="pdf-upload">Subir archivo PDF:</label>
                    <input type="file" id="pdf-upload" name="PdfFile" accept="application/pdf" aria-describedby="archivoAyuda" required />
                    <span id="archivoAyuda">Sube un archivo en formato PDF.</span>
                </div>

                <div class="form-field">
                    <button type="submit" class="btn-submit" aria-label="Enviar propuesta">Enviar Propuesta</button>
                </div>
            </form>
        </div>
    </div>

    <script>
        let extensionistCount = 1;
        function addExtensionistRow() {
            const tableBody = document.getElementById('extensionist-table-body');
            const newRow = document.createElement('tr');
            newRow.innerHTML =
                `<td><input type="text" name="Extensionists[${extensionistCount}].Nombre" placeholder="Nombre" required aria-label="Nombre del extensionista"/></td>
                <td><input type="text" name="Extensionists[${extensionistCount}].Apellido" placeholder="Apellido" required aria-label="Apellido del extensionista"/></td>
                <td><input type="text" name="Extensionists[${extensionistCount}].TipoNombramiento" placeholder="Tipo de Nombramiento" required aria-label="Tipo de nombramiento"/></td>
                <td><input type="text" name="Extensionists[${extensionistCount}].Condicion" placeholder="Condición" required aria-label="Condición del extensionista"/></td>
                <td><input type="date" name="Extensionists[${extensionistCount}].FechaInicio" required aria-label="Fecha de inicio del nombramiento"/></td>
                <td><input type="date" name="Extensionists[${extensionistCount}].FechaFin" required aria-label="Fecha de fin del nombramiento"/></td>
                <td><button type="button" class="btn-remove" onclick="removeExtensionistRow(this)" aria-label="Quitar extensionista">Quitar</button></td>`;
            tableBody.appendChild(newRow);
            extensionistCount++;
        }

        function removeExtensionistRow(button) {
            const row = button.closest('tr');
            row.remove();
        }

        let organizationCount = 1;
        function addOrganizationRow() {
            const tableBody = document.getElementById('organization-table-body');
            const newRow = document.createElement('tr');
            newRow.innerHTML =
                `<td><input type="text" name="Organizations[${organizationCount}].Organizacion" placeholder="Institución u Organización" required aria-label="Nombre de la organización"/></td>
                <td><input type="text" name="Organizations[${organizationCount}].Contacto" placeholder="Correo Electrónico y/o Teléfono" required aria-label="Contacto de la organización"/></td>
                <td><button type="button" class="btn-remove" onclick="removeOrganizationRow(this)" aria-label="Quitar organización">Quitar</button></td>`;
            tableBody.appendChild(newRow);
            organizationCount++;
        }

        function removeOrganizationRow(button) {
            const row = button.closest('tr');
            row.remove();
        }

        function mostrarDatos(event) {
            const formData = new FormData(document.getElementById('propuestaForm'));
            console.log([...formData.entries()]);
            alert("Datos enviados exitosamente");
        }
    </script>
</body>
</html>
