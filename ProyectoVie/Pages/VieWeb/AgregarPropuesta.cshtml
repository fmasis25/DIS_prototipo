@page
@model ProyectoVie.Pages.VieWeb.Pages_VieWeb_AgregarPropuesta
@{
    ViewData["Title"] = "Registro de Propuestas";
}
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="../css/ProposalRegistration.css" />
    <link href="https://fonts.googleapis.com/css2?family=Nunito:wght@400;600&display=swap" rel="stylesheet">
    <title>Sistema de Propuestas - Registro</title>
    <style>
        body {
            font-family: 'Nunito', sans-serif;
            margin: 0;
            padding: 0;
            overflow-y: scroll;
        }

        .header {
            display: flex;
            align-items: center;
            background-color: #d9d9d9;
            padding: 10px 20px;
            border-bottom: 2px solid #000;
            position: fixed;
            width: 100%;
            top: 0;
            z-index: 1000;
        }

            .header img {
                height: 50px;
                margin-right: 20px;
            }

        .search-bar {
            flex-grow: 1;
            display: flex;
            margin-left: 10px;
            justify-content: space-between;
        }

            .search-bar input {
                width: 100%;
                padding: 10px;
                border-radius: 20px;
                border: 1px solid #ccc;
                margin-right: 10px;
            }

        .icon {
            width: 40px;
            margin-left: 10px;
        }

        .profile-pic {
            width: 50px;
            margin-right: 10px;
        }

        .sidebar {
            width: 200px;
            background-color: #140e39;
            color: white;
            padding: 20px;
            position: fixed;
            height: 100%;
            top: 60px;
            overflow-y: auto;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
        }

            .sidebar .option, .sidebar .exit-option {
                display: flex;
                flex-direction: column;
                align-items: center;
                justify-content: center;
                margin: 50px 0;
            }

                .sidebar .option img,
                .sidebar .exit-option img {
                    width: 80px;
                    margin-bottom: 5px;
                }

                .sidebar .option span,
                .sidebar .exit-option span {
                    font-size: 23px;
                    text-align: center;
                }

        .main-content {
            margin-left: 220px;
            padding: 20px;
            margin-top: 60px;
            overflow-y: auto;
            height: calc(100vh - 60px);
        }

        .form-container {
            background-color: #ececec;
            border-radius: 10px;
            padding: 20px;
        }

        .form-field {
            margin-bottom: 20px;
        }

            .form-field label {
                display: block;
                margin-bottom: 5px;
            }

            .form-field input,
            .form-field select,
            .form-field textarea {
                width: 100%;
                padding: 10px;
                border-radius: 5px;
                border: 1px solid #ccc;
            }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-bottom: 20px;
        }

        th, td {
            border: 1px solid #ccc;
            padding: 10px;
            text-align: left;
        }

        th {
            background-color: #d9d9d9;
        }

        .btn-container {
            display: flex;
            justify-content: flex-start;
            margin-top: 10px;
        }

        button {
            font-family: 'Nunito', sans-serif;
            padding: 10px 15px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            margin-right: 10px;
        }

        .btn-add {
            background-color: #5cb85c;
            color: white;
        }

        .btn-remove {
            background-color: #d9534f;
            color: white;
        }

        .btn-submit {
            background-color: #28a745;
            color: white;
            padding: 15px 20px;
            font-size: 16px;
        }

        .file-upload {
            margin-top: 10px;
        }

        h1 {
            font-size: 35px;
            text-align: center;
            margin-bottom: 20px;
        }
    </style>
    <script>
        function addExtensionistRow() {
            const tableBody = document.getElementById("extensionist-table-body");
            const newRow = `
                        <tr>
                            <td><input type="text" placeholder="Nombre y Apellidos" aria-label="Nombre y Apellidos" /></td>
                            <td><input type="text" placeholder="Escuela/Instancia Académica" aria-label="Escuela/Instancia Académica" /></td>
                            <td><input type="text" placeholder="Tipo de Nombramiento" aria-label="Tipo de Nombramiento" /></td>
                            <td><input type="text" placeholder="Condición" aria-label="Condición" /></td>
                            <td><input type="text" placeholder="Periodo de Participación" aria-label="Periodo de Participación" /></td>
                        </tr>`;
            tableBody.insertAdjacentHTML('beforeend', newRow);
        }

        function addOrganizationRow() {
            const tableBody = document.getElementById("organization-table-body");
            const newRow = `
                        <tr>
                            <td><input type="text" placeholder="Nombre y Apellidos (Contacto Principal)" aria-label="Nombre y Apellidos (Contacto Principal)" /></td>
                            <td><input type="text" placeholder="Institución u Organización" aria-label="Institución u Organización" /></td>
                            <td><input type="text" placeholder="Contacto (Correo Electrónico y/o Teléfono)" aria-label="Contacto (Correo Electrónico y/o Teléfono)" /></td>
                        </tr>`;
            tableBody.insertAdjacentHTML('beforeend', newRow);
        }

        function removeRow(tableBodyId) {
            const tableBody = document.getElementById(tableBodyId);
            const rows = tableBody.getElementsByTagName('tr');
            if (rows.length > 0) {
                tableBody.deleteRow(rows.length - 1);
            }
        }

        function showAlert() {
            const nombreProyecto = document.getElementById("project-name").value;
            const extensionType = document.getElementById("extension-type").value;
            const sustainableGoals = document.getElementById("sustainable-goals").value;
            const agreementNumber = document.getElementById("agreement-number").value;
            const approvalDate = document.getElementById("approval-date").value;
            const projectCondition = document.getElementById("project-condition").value;

            const extensionists = Array.from(document.querySelectorAll("#extensionist-table-body tr")).map(row => {
                return Array.from(row.querySelectorAll("input")).map(input => input.value).join(", ");
            }).join(" | ");

            const organizations = Array.from(document.querySelectorAll("#organization-table-body tr")).map(row => {
                return Array.from(row.querySelectorAll("input")).map(input => input.value).join(", ");
            }).join(" | ");

            alert(`Datos del Proyecto:\nNombre: ${nombreProyecto}\nTipo de Extensión: ${extensionType}\nODS: ${sustainableGoals}\nNúmero de Acuerdo: ${agreementNumber}\nFecha de Aprobación: ${approvalDate}\nCondición Actual: ${projectCondition}\n\nExtensionistas:\n${extensionists}\n\nOrganizaciones:\n${organizations}`);
        }
    </script>
</head>
<body>
    <header class="header">
        <img src="~/css/tec-logo.jpg" alt="Logo del Tecnológico de Costa Rica">
        <div class="search-bar">
            <img src="~/css/ProfilePic.png" alt="Perfil" class="profile-pic" aria-label="Perfil">
            <input type="text" placeholder="Buscar..." aria-label="Buscar propuestas">
            <img src="~/css/Lupa.png" alt="Buscar" class="icon" aria-hidden="true">
        </div>
    </header>

    <div class="sidebar">
        <div class="option">
            <img src="~/css/Pagina.png" alt="Mis Propuestas">
            <span>Mis Propuestas</span>
        </div>
        <div class="exit-option">
            <img src="~/css/Salir.png" alt="Salir">
            <span>Salir</span>
        </div>
    </div>

    <div class="main-content">
        <div class="form-container">
            <h1>Inscripción de Proyectos de Extensión</h1>
            <h2>DATOS INSTANCIA ACADÉMICA</h2>
            <div class="form-field">
                <label for="agreement-number">Número acuerdo de escuela coordinadora:</label>
                <input type="text" id="agreement-number" placeholder="Número acuerdo" aria-required="true" aria-label="Número acuerdo de escuela coordinadora" />
            </div>
            <div class="form-field">
                <label for="approval-date">Fecha de aprobación:</label>
                <input type="date" id="approval-date" aria-required="true" aria-label="Fecha de aprobación" />
            </div>
            <div class="form-field">
                <label for="project-condition">Condición actual del proyecto:</label>
                <select id="project-condition" aria-required="true" aria-label="Condición actual del proyecto">
                    <option value="">Elija un elemento</option>
                    <option value="active">Activo</option>
                    <option value="inactive">Inactivo</option>
                </select>
            </div>

            <h2>DATOS DEL PROYECTO</h2>
            <div class="form-field">
                <label for="project-name">Nombre del proyecto:</label>
                <input type="text" id="project-name" placeholder="Nombre del proyecto" aria-required="true" aria-label="Nombre del proyecto" />
            </div>
            <div class="form-field">
                <label for="extension-type">Tipo de extensión:</label>
                <input type="text" id="extension-type" placeholder="Tipo de extensión" aria-required="true" aria-label="Tipo de extensión" />
            </div>
            <div class="form-field">
                <label for="sustainable-goals">Objetivo de Desarrollo Sostenible (ODS):</label>
                <textarea id="sustainable-goals" rows="4" placeholder="Objetivo de Desarrollo Sostenible" aria-required="true" aria-label="Objetivo de Desarrollo Sostenible (ODS)"></textarea>
            </div>

            <h2>DATOS DEL GRUPO EXTENSIONISTA</h2>
            <table>
                <thead>
                    <tr>
                        <th>Nombre y Apellidos</th>
                        <th>Escuela/Instancia Académica</th>
                        <th>Tipo de Nombramiento</th>
                        <th>Condición</th>
                        <th>Periodo de Participación</th>
                    </tr>
                </thead>
                <tbody id="extensionist-table-body">
                    <tr>
                        <td><input type="text" placeholder="Nombre y Apellidos" aria-label="Nombre y Apellidos" /></td>
                        <td><input type="text" placeholder="Escuela/Instancia Académica" aria-label="Escuela/Instancia Académica" /></td>
                        <td><input type="text" placeholder="Tipo de Nombramiento" aria-label="Tipo de Nombramiento" /></td>
                        <td><input type="text" placeholder="Condición" aria-label="Condición" /></td>
                        <td><input type="text" placeholder="Periodo de Participación" aria-label="Periodo de Participación" /></td>
                    </tr>
                </tbody>
            </table>
            <div class="btn-container">
                <button type="button" class="btn-add" onclick="addExtensionistRow()">Añadir Extensionista</button>
                <button type="button" class="btn-remove" onclick="removeRow('extensionist-table-body')">Eliminar Última Fila</button>
            </div>

            <h2>DATOS DE INSTITUCIONES, ORGANIZACIONES O EMPRESAS PARTICIPANTES</h2>
            <table>
                <thead>
                    <tr>
                        <th>Nombre y Apellidos (Contacto Principal)</th>
                        <th>Institución u Organización</th>
                        <th>Contacto (Correo Electrónico y/o Teléfono)</th>
                    </tr>
                </thead>
                <tbody id="organization-table-body">
                    <tr>
                        <td><input type="text" placeholder="Nombre y Apellidos (Contacto Principal)" aria-label="Nombre y Apellidos (Contacto Principal)" /></td>
                        <td><input type="text" placeholder="Institución u Organización" aria-label="Institución u Organización" /></td>
                        <td><input type="text" placeholder="Contacto (Correo Electrónico y/o Teléfono)" aria-label="Contacto (Correo Electrónico y/o Teléfono)" /></td>
                    </tr>
                </tbody>
            </table>
            <div class="btn-container">
                <button type="button" class="btn-add" onclick="addOrganizationRow()">Añadir Organización</button>
                <button type="button" class="btn-remove" onclick="removeRow('organization-table-body')">Eliminar Última Fila</button>
            </div>

            <h2>DESCRIPCIÓN BREVE DE LA PROPUESTA</h2>
            <div class="form-field">
                <textarea id="proposal-description" rows="4" placeholder="Descripción breve de la propuesta" aria-required="true" aria-label="Descripción breve de la propuesta"></textarea>
            </div>

            <h2>ADJUNTAR DOCUMENTO</h2>
            <div class="form-field file-upload">
                <label for="pdf-upload">Seleccione un archivo PDF:</label>
                <input type="file" id="pdf-upload" accept="application/pdf" aria-required="true" aria-label="Seleccione un archivo PDF" />
            </div>

            <div class="btn-container">
                <button type="button" class="btn-submit" onclick="showAlert()">Enviar</button>
            </div>
        </div>
    </div>
</body>
</html>
