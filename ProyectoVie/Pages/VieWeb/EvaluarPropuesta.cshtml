@model EvaluarPropuestaViewModel

<div class="evaluation-table">
    <h2>Evaluación de propuesta</h2>
    @using (Html.BeginForm("EvaluarPropuesta", "EvaluarPropuesta", FormMethod.Post))
    {
        <table>
            <thead>
                <tr>
                    <th>Variable</th>
                    <th>Descripción de variable</th>
                    <th>N.C</th>
                    <th>C.Par</th>
                    <th>C. Nota</th>
                    <th>Estadísticas e informes</th>
                </tr>
            </thead>
            <tbody>
                @for (int i = 0; i < Model.TableData.Count; i++)
                {
                    <tr>
                        <td>@Model.TableData[i].Variable</td>
                        <td>@Model.TableData[i].Descripcion</td>
                        <td>
                            @Html.CheckBoxFor(m => m.TableData[i].NC, new { @class = "checkbox-nc" })
                        </td>
                        <td>@Model.TableData[i].CPar</td>
                        <td>@Model.TableData[i].CNota</td>
                        <td>@Model.TableData[i].Estadisticas</td>
                    </tr>
                }
            </tbody>
        </table>

        <div class="form-group">
            <label for="valoracionAdicional">Valoración adicional:</label>
            @Html.TextAreaFor(m => m.ValoracionAdicional, new { @class = "form-control", rows = 3, cols = 50 })
        </div>

        <div class="form-group">
            <strong>Nota Total: @Model.NotaTotal%</strong>
        </div>

        <button type="submit" class="btn btn-primary">Enviar Propuestas</button>
    }
</div>

<style>
    .evaluation-table {
        background-color: rgba(217, 217, 217, 1);
        margin-top: 46px;
        padding: 20px;
        border-radius: 8px;
    }

    table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 20px;
    }

    th, td {
        border: 1px solid #ddd;
        padding: 8px;
        text-align: left;
    }

    th {
        background-color: #f2f2f2;
        font-weight: bold;
    }

    .form-group {
        margin-top: 20px;
    }

    .form-control {
        width: 100%;
        padding: 10px;
        border-radius: 4px;
        border: 1px solid #ccc;
    }

    .btn-primary {
        background-color: #4CAF50;
        color: white;
        padding: 10px 20px;
        border: none;
        cursor: pointer;
        margin-top: 20px;
    }

    .btn-primary:hover {
        background-color: #45a049;
    }

    .checkbox-nc {
        margin-left: 10px;
    }

    @media (max-width: 991px) {
        .evaluation-table {
            margin-top: 40px;
        }
    }
</style>
 