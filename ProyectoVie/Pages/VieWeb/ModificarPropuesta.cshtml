@page
@model ProyectoVie.Pages.VieWeb.ModificarPropuestaModel
@{
    ViewData["Title"] = "Modificar Propuesta";
}
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="https://fonts.googleapis.com/css2?family=Nunito:wght@400;600&display=swap" rel="stylesheet">
    <title>Sistema de Propuestas - Modificación</title>
    <style>
        body {
            font-family: 'Nunito', sans-serif;
            margin: 0;
            padding: 0;
            display: flex;
            height: 100vh;
            overflow: hidden;
        }

        .header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            background-color: #d9d9d9;
            padding: 10px 20px;
            border-bottom: 2px solid #000;
            position: fixed;
            width: 100%;
            top: 0;
            height: 60px;
            z-index: 1000;
            box-sizing: border-box;
        }

        .tec-logo {
            height: 50px;
            width: auto;
            margin-right: 20px;
        }

        .profile-pic {
            width: 40px;
            height: auto;
            margin-left: auto;
            margin-right: 0;
        }

        .sidebar {
            width: 180px;
            background-color: #0a4275;
            color: white;
            padding: 15px;
            position: fixed;
            height: 100%;
            top: 60px;
            left: 0;
            display: flex;
            flex-direction: column;
            justify-content: flex-start;
            align-items: flex-start;
            z-index: 1000;
        }

            .sidebar .option, .sidebar .exit-option {
                display: flex;
                flex-direction: row;
                align-items: center;
                margin: 15px 0;
            }

            .sidebar .exit-option {
                margin-bottom: 20px;
            }

                .sidebar .option a img, .sidebar .exit-option a img {
                    width: 30px;
                    height: auto;
                    margin-right: 10px;
                }

                .sidebar .option span, .sidebar .exit-option span {
                    font-size: 16px;
                    text-align: left;
                }

        .main-content {
            margin-left: 220px;
            padding: 20px;
            margin-top: 60px;
            overflow-y: auto;
            height: calc(100vh - 60px);
        }

        .form-container {
            background-color: #ececec;
            border-radius: 10px;
            padding: 20px;
        }

        .form-field {
            margin-bottom: 30px;
        }

        textarea {
            width: 100%;
            height: 120px;
            padding: 10px;
            border: 1px solid #ccc;
            border-radius: 5px;
            resize: vertical;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-bottom: 30px;
        }

        th, td {
            border: 1px solid #ccc;
            padding: 10px;
            text-align: left;
        }

        th {
            background-color: #f2f2f2;
        }

        h1 {
            font-size: 35px;
            text-align: center;
            margin-bottom: 20px;
        }

        .btn-back {
            background-color: #007bff;
            color: white;
            padding: 10px 15px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            text-decoration: none;
        }
    </style>
</head>
<body>
    <!-- Header general del sistema -->
    <header class="header">
        <a href="/">
            <img src="~/css/tec-logo.png" alt="Logo del Tecnológico de Costa Rica" class="tec-logo">
        </a>
        <a href="/VieWeb/MiPerfil">
            <img src="~/css/icons/perfil.svg" alt="Perfil" class="profile-pic" aria-label="Perfil">
        </a>
    </header>

    <div class="sidebar">
        <div class="option">
            <a href="/VieWeb/MenuExtensionista" aria-label="Ver propuestas">
                <img src="~/css/icons/propuesta.svg" alt="Mis Propuestas">
            </a>
            <span>Mis Propuestas</span>
        </div>
        <div class="exit-option">
            <a href="/VieWeb/Login" aria-label="Cerrar sesión">
                <img src="~/css/icons/salir.svg" alt="Salir">
            </a>
            <span>Salir</span>
        </div>
    </div>

    <div class="main-content">
        <div class="form-container">
            <h1>Modificar Propuesta</h1>
            <form id="modificarForm" method="post">
                <!-- DATOS INSTANCIA ACADÉMICA -->
                <h2>DATOS INSTANCIA ACADÉMICA</h2>
                <div class="form-field">
                    <label for="agreement-number">Número acuerdo de escuela coordinadora:</label>
                    <input type="text" id="agreement-number" name="IdentificacionAcuerdo" value="@Model.Propuesta.IdentificacionAcuerdo" />
                </div>
                <div class="form-field">
                    <label for="approval-date">Fecha de aprobación:</label>
                    <input type="date" id="approval-date" name="FechaAprobacion" value="@Model.Propuesta.FechaAprobacion.ToString("yyyy-MM-dd")" />
                </div>
                <div class="form-field">
                    <label for="project-description">Descripción del proyecto:</label>
                    <textarea id="project-description" name="Descripcion">@Model.Propuesta.Descripcion</textarea>
                </div>

                <!-- DATOS DEL PROYECTO -->
                <h2>DATOS DEL PROYECTO</h2>
                <div class="form-field">
                    <label for="project-name">Nombre del proyecto:</label>
                    <input type="text" id="project-name" name="NombreProyecto" value="@Model.Propuesta.NombreProyecto" />
                </div>
                <div class="form-field">
                    <label for="extension-type">Tipo de extensión:</label>
                    <input type="text" id="extension-type" name="TipoExtension" value="@Model.Propuesta.TipoExtension" />
                </div>
                <div class="form-field">
                    <label for="sustainable-goals">Objetivo de Desarrollo Sostenible (ODS):</label>
                    <textarea id="sustainable-goals" name="ObjetivoDesarrolloSostenible">@Model.Propuesta.ObjetivoDesarrolloSostenible</textarea>
                </div>
                <div class="form-field">
                    <label for="introduction">Introducción:</label>
                    <textarea id="introduction" name="Introduccion">@Model.Propuesta.Introduccion</textarea>
                </div>
                <div class="form-field">
                    <label for="professional-profiles">Perfiles Profesionales:</label>
                    <textarea id="professional-profiles" name="PerfilesProfesionales">@Model.Propuesta.PerfilesProfesionales</textarea>
                </div>
                <div class="form-field">
                    <label for="student-participation">Participación Estudiantil:</label>
                    <textarea id="student-participation" name="ParticipacionEstudiantil">@Model.Propuesta.ParticipacionEstudiantil</textarea>
                </div>
                <div class="form-field">
                    <label for="compliance-risks">Riesgos de Cumplimiento:</label>
                    <textarea id="compliance-risks" name="RiesgosCumplimiento">@Model.Propuesta.RiesgosCumplimiento</textarea>
                </div>
                <div class="form-field">
                    <label for="financial-feasibility">Viabilidad Financiera:</label>
                    <textarea id="financial-feasibility" name="ViabilidadFinanciera">@Model.Propuesta.ViabilidadFinanciera</textarea>
                </div>
                <div class="form-field">
                    <label for="social-impact">Impacto Social:</label>
                    <textarea id="social-impact" name="ImpactoSocial">@Model.Propuesta.ImpactoSocial</textarea>
                </div>
                <div class="form-field">
                    <label for="academic-impact">Impacto Académico:</label>
                    <textarea id="academic-impact" name="ImpactoAcademico">@Model.Propuesta.ImpactoAcademico</textarea>
                </div>

                <!-- DATOS DEL GRUPO EXTENSIONISTA -->
                <h2>DATOS DEL GRUPO EXTENSIONISTA</h2>
                <div id="extensionist-section">
                    <table>
                        <caption>Listado del grupo extensionista</caption>
                        <thead>
                            <tr>
                                <th>Nombre</th>
                                <th>Apellido</th>
                                <th>Tipo de Nombramiento</th>
                                <th>Condición</th>
                                <th>Fecha Inicio</th>
                                <th>Fecha Fin</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var extensionista in Model.Extensionists)
                            {
                                <tr>
                                    <td>@extensionista.Nombre</td>
                                    <td>@extensionista.Apellido</td>
                                    <td>@extensionista.TipoNombramiento</td>
                                    <td>@extensionista.Condicion</td>
                                    <td>@extensionista.FechaInicio.ToString("yyyy-MM-dd")</td>
                                    <td>@extensionista.FechaFin.ToString("yyyy-MM-dd")</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <!-- DATOS DE LA INSTITUCIÓN -->
                <h2>DATOS DE LA INSTITUCIÓN EXTENSIONISTA</h2>
                <div id="institution-section">
                    <table>
                        <caption>Listado de instituciones</caption>
                        <thead>
                            <tr>
                                <th>Nombre</th>
                                <th>Contacto</th>
                                <th>Correo</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var institucion in Model.Organizations)
                            {
                                <tr>
                                    <td>@institucion.Organizacion</td>
                                    <td>@institucion.Contacto</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <button type="submit" class="btn-back">Guardar Cambios</button>
                <a href="/VieWeb/MenuExtensionista" class="btn-back">Volver</a>
            </form>
        </div>
    </div>
</body>
</html>
