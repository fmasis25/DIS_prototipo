@page
@model ProyectoVie.Pages.VieWeb.Pages_VieWeb_ModificarPropuesta
@{
    ViewData["Title"] = "Modificar Propuestas";
}
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="../css/ProposalRegistration.css" />
    <link href="https://fonts.googleapis.com/css2?family=Nunito:wght@400;600&display=swap" rel="stylesheet">
    <title>Sistema de Propuestas - Modificación</title>
    <style>
        body {
            font-family: 'Nunito', sans-serif;
            margin: 0;
            padding: 0;
            overflow-y: scroll;
        }

        /* Header Styles */
        .header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            background-color: #d9d9d9;
            padding: 10px 20px;
            border-bottom: 2px solid #000;
            position: fixed;
            width: 100%;
            top: 0;
            z-index: 1000;
            box-sizing: border-box;
        }

            .header a {
                display: flex;
                align-items: center;
                justify-content: center;
            }

        .tec-logo {
            height: 20px; /* Ajusta la altura para que sea menos alta */
            max-width: 100%; /* Mantiene el largo adecuado */
            object-fit: contain; /* Asegura que no se distorsione */
        }


        .search-bar {
            display: flex;
            align-items: center;
            justify-content: center;
            width: 70%; /* Aumenta el ancho de la barra de búsqueda */
        }

            .search-bar input {
                width: 80%; /* Aprovecha el espacio disponible */
                padding: 10px;
                border-radius: 20px;
                border: 1px solid #ccc;
            }

        .icon, .profile-pic {
            width: 35px; /* Ajusta el tamaño de los íconos */
            height: 35px; /* Asegura que tengan el mismo tamaño */
            margin-left: 10px;
        }

        /* Responsiveness for the SVG icons */
        .header img, .icon, .profile-pic {
            max-width: 100%;
            height: auto;
        }

        /* Sidebar Styles */
        .sidebar {
            width: 200px;
            background-color: #0a4275;
            color: white;
            padding: 20px;
            position: fixed;
            height: 100%;
            top: 60px;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
        }

            .sidebar .option, .sidebar .exit-option {
                display: flex;
                flex-direction: column;
                align-items: center;
                margin: 20px 0;
            }

                .sidebar .option img,
                .sidebar .exit-option img {
                    width: 80px;
                    height: auto;
                    margin-bottom: 5px;
                }

                .sidebar .option span,
                .sidebar .exit-option span {
                    font-size: 23px;
                    text-align: center;
                }

        /* Main Content Styles */
        .main-content {
            margin-left: 220px;
            padding: 20px;
            margin-top: 60px;
            overflow-y: auto;
            height: calc(100vh - 60px);
        }

        /* Form Styles */
        .form-container {
            background-color: #ececec;
            border-radius: 10px;
            padding: 20px;
        }

        .form-field {
            margin-bottom: 20px;
        }

            .form-field label {
                display: block;
                margin-bottom: 5px;
            }

            .form-field input,
            .form-field select,
            .form-field textarea {
                width: 100%;
                padding: 10px;
                border-radius: 5px;
                border: 1px solid #ccc;
            }

        .btn-container {
            display: flex;
            justify-content: flex-start;
            margin-top: 10px;
        }

        button {
            padding: 10px 15px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            margin-right: 10px;
        }

        .btn-add {
            background-color: #5cb85c;
            color: white;
        }

        .btn-remove {
            background-color: #d9534f;
            color: white;
        }

        .btn-submit {
            background-color: #28a745;
            color: white;
            padding: 15px 20px;
            font-size: 16px;
        }

        h1 {
            font-size: 35px;
            text-align: center;
            margin-bottom: 20px;
        }
    </style>
</head>
<body>
    <header class="header">
        <a href="/">
            <img src="~/css/tec-logo.jpg" alt="Logo del Tecnológico de Costa Rica" class="tec-logo">
        </a>
        <div class="search-bar">
            <input type="text" placeholder="Buscar..." aria-label="Buscar propuestas">
            <a href="/buscar">
                <img src="~/css/icons/lupa.svg" alt="Buscar" class="icon" aria-hidden="true">
            </a>
            <a href="/perfil">
                <img src="~/css/icons/perfil.svg" alt="Perfil" class="profile-pic" aria-label="Perfil">
            </a>
        </div>
    </header>

    <div class="sidebar">
        <div class="option">
            <a href="/propuestas">
                <img src="~/css/icons/propuesta.svg" alt="Mis Propuestas">
            </a>
            <span>Mis Propuestas</span>
        </div>
        <div class="exit-option">
            <a href="/salir">
                <img src="~/css/icons/salir.svg" alt="Salir">
            </a>
            <span>Salir</span>
        </div>
    </div>

    <div class="main-content">
        <div class="form-container">
            <h1>Modificar Propuestas de Extensión</h1>
            <h2>DATOS INSTANCIA ACADÉMICA</h2>
            <div class="form-field">
                <label for="agreement-number">Número acuerdo de escuela coordinadora:</label>
                <p id="agreement-number">12345</p> <!-- Este campo es solo lectura -->
            </div>
            <div class="form-field">
                <label for="approval-date">Fecha de aprobación:</label>
                <input type="date" id="approval-date" value="2024-01-01" aria-label="Fecha de aprobación">
            </div>
            <div class="form-field">
                <label for="project-condition">Condición actual del proyecto:</label>
                <input type="text" id="project-condition" value="Activo" aria-label="Condición del proyecto">
            </div>

            <h2>DATOS DEL PROYECTO</h2>
            <div class="form-field">
                <label for="project-name">Nombre del proyecto:</label>
                <input type="text" id="project-name" value="Proyecto de Ejemplo" aria-label="Nombre del proyecto">
            </div>
            <div class="form-field">
                <label for="extension-type">Tipo de extensión:</label>
                <input type="text" id="extension-type" value="Educativa" aria-label="Tipo de extensión">
            </div>
            <div class="form-field">
                <label for="sustainable-goals">Objetivo de Desarrollo Sostenible (ODS):</label>
                <textarea id="sustainable-goals" class="ods-description" aria-label="Descripción del ODS">Reducción de la pobreza</textarea>
            </div>

            <h2>DATOS DEL GRUPO EXTENSIONISTA</h2>
            <table>
                <thead>
                    <tr>
                        <th>Nombre y Apellidos</th>
                        <th>Escuela/Instancia Académica</th>
                        <th>Tipo de Nombramiento</th>
                        <th>Condición</th>
                        <th>Periodo de Participación</th>
                    </tr>
                </thead>
                <tbody id="extensionist-table-body">
                    <tr>
                        <td><input type="text" value="Juan Pérez" aria-label="Nombre y Apellidos"></td>
                        <td><input type="text" value="Escuela de Ciencias" aria-label="Escuela/Instancia Académica"></td>
                        <td><input type="text" value="Profesor" aria-label="Tipo de Nombramiento"></td>
                        <td><input type="text" value="Activo" aria-label="Condición"></td>
                        <td><input type="text" value="2024" aria-label="Periodo de Participación"></td>
                    </tr>
                </tbody>
            </table>

            <h2>DATOS DE INSTITUCIONES, ORGANIZACIONES O EMPRESAS PARTICIPANTES</h2>
            <table>
                <thead>
                    <tr>
                        <th>Nombre y Apellidos (Contacto Principal)</th>
                        <th>Institución u Organización</th>
                        <th>Contacto (Correo Electrónico y/o Teléfono)</th>
                    </tr>
                </thead>
                <tbody id="organization-table-body">
                    <tr>
                        <td><input type="text" value="María López" aria-label="Nombre y Apellidos"></td>
                        <td><input type="text" value="Organización Ejemplo" aria-label="Institución u Organización"></td>
                        <td><input type="text" value="maria@example.com" aria-label="Contacto"></td>
                    </tr>
                </tbody>
            </table>

            <h2>DESCRIPCIÓN BREVE DE LA PROPUESTA</h2>
            <div class="form-field">
                <textarea id="proposal-description" class="proposal-description" aria-label="Descripción de la propuesta">Esta es una descripción breve de la propuesta de extensión.</textarea>
            </div>

            <h2>DOCUMENTO ADJUNTO</h2>
            <div class="form-field file-upload">
                <p>Archivo PDF: <a href="path/to/document.pdf" target="_blank">Ver documento</a></p>
            </div>

            <button class="save-button" aria-label="Guardar cambios">Guardar Cambios</button>
        </div>
    </div>
</body>
</html>
