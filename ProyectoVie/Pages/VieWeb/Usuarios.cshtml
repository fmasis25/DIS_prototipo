@page
@model ProyectoVie.Pages.VieWeb.UsuariosModel
@{
    ViewData["Title"] = "Gestión de Usuarios";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Usuarios</title>
    <link rel="stylesheet" href="../css/usuarios.css">
</head>
<body>
    <!-- Header general del sistema -->
    <header class="header">
        <a href="/">
            <img src="~/css/tec-logo.png" alt="Logo del Tecnológico de Costa Rica" class="tec-logo">
        </a>
        <a href="/perfil">
            <img src="~/css/icons/perfil.svg" alt="Perfil" class="profile-pic" aria-label="Perfil">
        </a>
    </header>

    <!-- Sidebar izquierdo con opciones -->
    <div class="sidebar">
        <div class="option">
            <a href="/VieWeb/MenuAdmin">
                <img src="~/css/icons/propuesta.svg" alt="Propuestas">
            </a>
            <span>Propuestas</span>
        </div>
        <div class="option">
            <a href="/VieWeb/Graficos">
                <img src="~/css/icons/estadisticas.svg" alt="Estadísticas">
            </a>
            <span>Estadísticas</span>
        </div>
        <div class="option">
            <a href="/VieWeb/Usuarios">
                <img src="~/css/icons/usuarios.svg" alt="Usuarios">
            </a>
            <span>Usuarios</span>
        </div>
        <div class="exit-option">
            <a href="/VieWeb/Login">
                <img src="~/css/icons/salir.svg" alt="Salir">
            </a>
            <span>Salir</span>
        </div>
    </div>

    <!-- Contenido principal -->
    <div class="main-content">
        <h1>Gestión de Usuarios</h1>

        <!-- Tabla de usuarios -->
        <div class="usuarios-container">
            <table class="usuarios-table">
                <thead>
                    <tr>
                        <th>Correo</th>
                        <th>Rol</th>
                        <th>Contraseña</th> <!-- Columna para la contraseña -->
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var usuario in Model.Usuarios)
                    {
                        <tr>
                            <td>@usuario.Correo</td>
                            <td>@usuario.Rol</td>
                            <td>@usuario.Contrasena</td>
                            <td>
                                <div class="dropdown">
                                    <button class="dropbtn">⋮</button>
                                    <div class="dropdown-content">
                                        <!-- Ruta de editar usuario -->
                                        <a asp-page-handler="Editar" asp-route-cedula="@usuario.Cedula">Editar</a>
                                        <!-- Ruta de eliminar usuario -->
                                        <a asp-page-handler="Eliminar" asp-route-cedula="@usuario.Cedula" onclick="return confirm('¿Estás seguro de eliminar este usuario?')">Eliminar</a>
                                    </div>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

</body>
</html>
