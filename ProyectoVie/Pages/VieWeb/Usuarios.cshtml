@page
@model ProyectoVie.Pages.VieWeb.UsuariosModel
@{
    ViewData["Title"] = "Gestión de Usuarios";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Usuarios</title>
    <link rel="stylesheet" href="../css/usuarios2.css">
</head>
<body>
    <header class="header">
        <a href="/"><img src="~/css/tec-logo.png" alt="Logo del Tecnológico de Costa Rica" class="tec-logo"></a>
        <a href="/VieWeb/MiPerfil"><img src="~/css/icons/perfil.svg" alt="Perfil" class="profile-pic"></a>
    </header>

    <div class="sidebar">
        <div class="option">
            <a href="/VieWeb/MenuAdmin"><img src="~/css/icons/propuesta.svg" alt="Propuestas"></a>
            <span>Propuestas</span>
        </div>
        <div class="option">
            <a href="/VieWeb/Graficos"><img src="~/css/icons/estadisticas.svg" alt="Estadísticas"></a>
            <span>Estadísticas</span>
        </div>
        <div class="option">
            <a href="/VieWeb/Usuarios"><img src="~/css/icons/usuarios.svg" alt="Usuarios"></a>
            <span>Usuarios</span>
        </div>
        <div class="exit-option">
            <a href="/VieWeb/Login"><img src="~/css/icons/salir.svg" alt="Salir"></a>
            <span>Salir</span>
        </div>
    </div>

    <main class="main-content">
        <h1>Gestión de Usuarios</h1>

        <!-- Tabla de Evaluadores (Rol 2) -->
        <h2>Evaluadores</h2>
        <div class="usuarios-container">
            <table class="usuarios-table">
                <thead>
                    <tr>
                        <th>Nombre</th>
                        <th>Apellido</th>
                        <th>Correo</th>
                        <th>Propuestas Asignadas</th>
                        <th>Fechas Asignadas</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var usuario in Model.Evaluadores)
                    {
                        <tr>
                            <td>@usuario.Nombre</td>
                            <td>@usuario.Apellido</td>
                            <td>@usuario.Correo</td>
                            <td>@usuario.PropuestasAsignadas</td>
                            <td>@usuario.FechasAsignadas</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <!-- Tabla de Proponentes (Rol 1) -->
        <h2>Proponentes</h2>
        <div class="usuarios-container">
            <table class="usuarios-table">
                <thead>
                    <tr>
                        <th>Nombre</th>
                        <th>Apellido</th>
                        <th>Correo</th>
                        <th>Propuestas Creadas</th>
                        <th>Fechas Creadas</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var usuario in Model.Proponentes)
                    {
                        <tr>
                            <td>@usuario.Nombre</td>
                            <td>@usuario.Apellido</td>
                            <td>@usuario.Correo</td>
                            <td>@usuario.PropuestasCreadas</td>
                            <td>@usuario.FechasCreadas</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </main>
</body>
</html>

