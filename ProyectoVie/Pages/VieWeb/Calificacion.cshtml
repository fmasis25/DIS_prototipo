@page
@model ProyectoVie.Pages.VieWeb.CalificacionModel
@{
    ViewData["Title"] = "Consulta de Evaluación";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Consultar Nota</title>
    <link rel="stylesheet" href="../css/menue.css">
</head>
<body>
    <style>
        /* Añadir estilos para mejorar la visibilidad de la tabla */
        table {
            width: 100%;
            border-collapse: collapse;
        }

        th, td {
            border: 1px solid #ddd;
            padding: 8px;
            text-align: left;
        }

        th {
            background-color: #f2f2f2;
            font-weight: bold;
        }

        input[type="text"], input[type="number"] {
            width: 100%;
            box-sizing: border-box;
            padding: 6px;
        }

        /* Hacer el checkbox más grande */
        input[type="checkbox"] {
            width: 30px; /* Ajusta el tamaño del checkbox */
            height: 30px; /* Ajusta el tamaño del checkbox */
            margin: 0 auto; /* Centra el checkbox dentro de su contenedor */
            display: block; /* Asegura que se comporte como un bloque y ocupe todo el ancho disponible */
        }

        /* Hacer que la tabla sea scrolleable */
        .rubrica-container {
            max-height: 400px;
            overflow-y: auto;
        }

        /* Estilo para el total que no será editable */
        .total-input {
            background-color: #f9f9f9;
            text-align: center;
        }

        /* Estilo para el botón */
        .button-container {
            margin-top: 20px;
            text-align: center;
        }

        .complete-button {
            background-color: #4CAF50;
            color: white;
            padding: 10px 20px;
            border: none;
            cursor: pointer;
            font-size: 16px;
        }

            .complete-button:hover {
                background-color: #45a049;
            }
    </style>
    <!-- Header general del sistema -->
    <header class="header">
        <a href="/">
            <img src="~/css/tec-logo.jpg" alt="Logo del Tecnológico de Costa Rica" class="tec-logo">
        </a>
        <div class="search-bar">
            <input type="text" placeholder="Buscar..." aria-label="Buscar propuestas">
            <a href="/buscar">
                <img src="~/css/icons/lupa.svg" alt="Buscar" class="icon" aria-hidden="true">
            </a>
            <a href="/perfil">
                <img src="~/css/icons/perfil.svg" alt="Perfil" class="profile-pic" aria-label="Perfil">
            </a>
        </div>
    </header>

    <!-- Sidebar izquierdo con opciones -->
    <div class="sidebar">
        <div class="option">
            <a href="/propuestas">
                <img src="~/css/icons/propuesta.svg" alt="Mis Propuestas">
            </a>
            <span>Mis Propuestas</span>
        </div>
        <div class="exit-option">
            <a href="/salir">
                <img src="~/css/icons/salir.svg" alt="Salir">
            </a>
            <span>Salir</span>
        </div>
    </div>

    <!-- Contenido principal -->
    <div class="main-content">
        <h1>Consulta de Evaluación de Propuesta</h1>
        <form method="post">
            <div class="rubrica-container">
                <table class="rubrica-table">
                    <thead>
                        <tr>
                            <th>VARIABLE</th>
                            <th>DESCRIPCIÓN</th>
                            <th>No cumple</th>
                            <th>Cumple parcial</th>
                            <th>Cumple</th>
                            <th>Porcentaje</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>Afinidad de disciplinas</td>
                            <td>
                                El equipo de trabajo cumple con:<br>
                                a. Explica la articulación de las áreas de conocimiento participantes.<br>
                                b. Especifica la participación de cada integrante del equipo.<br>
                                c. Tiene una conformación interdisciplinaria.
                            </td>
                            <td><input type="checkbox" name="NoCumpleAfinidad" disabled @(Model.NoCumpleAfinidad == 1 ? "checked" : "")></td>
                            <td><input type="checkbox" name="CumpleParcialAfinidad" disabled @(Model.CumpleParcialAfinidad == 1 ? "checked" : "")></td>
                            <td><input type="checkbox" name="CumpleAfinidad" disabled @(Model.CumpleAfinidad == 1 ? "checked" : "")></td>
                            <td><input type="number" name="PorcentajeAfinidad" value="@Model.PorcentajeAfinidad.ToString("0.##")" readonly></td>
                        </tr>
                        <tr>
                            <td>El problema que aborda</td>
                            <td>
                                El problema que aborda cumple con:<br>
                                a. Se encuentra justificado con fuentes de información con referencias actualizadas y dentro de las políticas nacionales vigentes.<br>
                                b. Se vincula con los ejes del conocimiento estratégicos del ITCR.<br>
                                c. Hay explicación sobre su correspondencia con los ODS.
                            </td>
                            <td><input type="checkbox" name="NoCumpleProblema" disabled @(Model.NoCumpleProblema == 1 ? "checked" : "")></td>
                            <td><input type="checkbox" name="CumpleParcialProblema" disabled @(Model.CumpleParcialProblema == 1 ? "checked" : "")></td>
                            <td><input type="checkbox" name="CumpleProblema" disabled @(Model.CumpleProblema == 1 ? "checked" : "")></td>
                            <td><input type="number" name="PorcentajeProblema" value="@Model.PorcentajeProblema.ToString("0.##")" readonly></td>
                        </tr>
                        <tr>
                            <td>Estrategia de abordaje</td>
                            <td>
                                La estrategia de abordaje cumple con:<br>
                                a. Describe el proceso para la obtención de los resultados esperados.<br>
                                b. Especifica las metodologías y técnicas acorde al tipo de proyecto (extensión docente, transferencia tecnológica y acción participativa).<br>
                                c. Especifica la relación del eje de conocimiento y su propuesta.
                            </td>
                            <td><input type="checkbox" name="NoCumpleEstrategia" disabled @(Model.NoCumpleEstrategia == 1 ? "checked" : "")></td>
                            <td><input type="checkbox" name="CumpleParcialEstrategia" disabled @(Model.CumpleParcialEstrategia == 1 ? "checked" : "")></td>
                            <td><input type="checkbox" name="CumpleEstrategia" disabled @(Model.CumpleEstrategia == 1 ? "checked" : "")></td>
                            <td><input type="number" name="PorcentajeEstrategia" value="@Model.PorcentajeEstrategia.ToString("0.##")" readonly></td>
                        </tr>
                        <tr>
                            <td>Información técnica</td>
                            <td>
                                La información técnica cumple con:<br>
                                a. Los objetivos específicos tienen resultados esperados.<br>
                                b. Los objetivos específicos tienen actividades con indicadores y su respectivo medio de verificación.<br>
                                c. Cuenta con un cronograma.<br>
                                d. Presenta un análisis de los riesgos y mitigaciones.
                            </td>
                            <td><input type="checkbox" name="NoCumpleInformacion" disabled @(Model.NoCumpleInformacion == 1 ? "checked" : "")></td>
                            <td><input type="checkbox" name="CumpleParcialInformacion" disabled @(Model.CumpleParcialInformacion == 1 ? "checked" : "")></td>
                            <td><input type="checkbox" name="CumpleInformacion" disabled @(Model.CumpleInformacion == 1 ? "checked" : "")></td>
                            <td><input type="number" name="PorcentajeInformacion" value="@Model.PorcentajeInformacion.ToString("0.##")" readonly></td>
                        </tr>
                        <tr>
                            <td>Viabilidad financiera</td>
                            <td>
                                En cuanto a los recursos cumple con:<br>
                                a. Están debidamente justificados.<br>
                                b. Se detallan ingresos y egresos.<br>
                                c. Hay una distribución de los recursos que responden a las actividades de proyecto.
                            </td>
                            <td><input type="checkbox" name="NoCumpleFinanciera" disabled @(Model.NoCumpleFinanciera == 1 ? "checked" : "")></td>
                            <td><input type="checkbox" name="CumpleParcialFinanciera" disabled @(Model.CumpleParcialFinanciera == 1 ? "checked" : "")></td>
                            <td><input type="checkbox" name="CumpleFinanciera" disabled @(Model.CumpleFinanciera == 1 ? "checked" : "")></td>
                            <td><input type="number" name="PorcentajeFinanciera" value="@Model.PorcentajeFinanciera.ToString("0.##")" readonly></td>
                        </tr>
                        <tr>
                            <td>Participación</td>
                            <td>
                                La participación cumple con:<br>
                                a. Tiene el respaldo de los actores participantes.<br>
                                b. Están debidamente justificados.<br>
                                c. Está acorde al tipo de intervención.
                            </td>
                            <td><input type="checkbox" name="NoCumpleParticipacion" disabled @(Model.NoCumpleParticipacion == 1 ? "checked" : "")></td>
                            <td><input type="checkbox" name="CumpleParcialParticipacion" disabled @(Model.CumpleParcialParticipacion == 1 ? "checked" : "")></td>
                            <td><input type="checkbox" name="CumpleParticipacion" disabled @(Model.CumpleParticipacion == 1 ? "checked" : "")></td>
                            <td><input type="number" name="PorcentajeParticipacion" value="@Model.PorcentajeParticipacion.ToString("0.##")" readonly></td>

                        </tr>
                        <tr>
                            <td class="total-input"><strong>Total</strong></td>
                            <td colspan="5">
                                <input type="text" name="PorcentajeTotal" value="@Model.PorcentajeTotal" class="total-input" readonly>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
            <!-- Botón para completar la evaluación -->

        </form>
    </div>

</body>
</html>
