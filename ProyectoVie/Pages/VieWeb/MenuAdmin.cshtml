@page
@model ProyectoVie.Pages.VieWeb.MenuAdminModel
@{
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="~/css/MenuAdmin.css" />
    <title>Panel Administrador</title>
</head>
<body>
    <!-- Estructura semántica con header -->
    <header role="banner">
        <!-- Logo accesible con descripción en 'alt' -->
        <img src="~/css/logo-admin.jpg" alt="Logo del Administrador" class="logo-admin" aria-label="Logo del Administrador">
    </header>

    <!-- Barra de navegación accesible -->
    <nav role="navigation" aria-label="Menú principal de administración">
        <ul>
            <!-- Enlaces con aria-label para mayor contexto a usuarios de lectores de pantalla -->
            <li><a href="/Proyectos" aria-label="Gestionar Proyectos">Proyectos</a></li>
            <li><a href="/Usuarios" aria-label="Gestionar Usuarios">Usuarios</a></li>
            <li><a href="/Finanzas" aria-label="Gestionar Finanzas">Finanzas</a></li>
        </ul>
    </nav>

    <!-- Contenido principal accesible -->
    <main role="main">
        <!-- Ejemplo de tabla con encabezados accesibles -->
        <table>
            <caption>Resumen de Actividades Recientes</caption>
            <thead>
                <tr>
                    <!-- Scope para indicar que estos son encabezados de columnas -->
                    <th scope="col">Fecha</th>
                    <th scope="col">Acción</th>
                    <th scope="col">Usuario</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>01/10/2024</td>
                    <td>Proyecto Aprobado</td>
                    <td>Juan Pérez</td>
                </tr>
                <tr>
                    <td>02/10/2024</td>
                    <td>Usuario Agregado</td>
                    <td>Maria García</td>
                </tr>
            </tbody>
        </table>
    </main>

    <!-- Pie de página accesible -->
    <footer role="contentinfo">
        <p>&copy; 2024 Proyecto VIE</p>
    </footer>
</body>
</html>
