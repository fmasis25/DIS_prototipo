@page
@model ProyectoVie.Pages.VieWeb.MenuAdminModel
@{
    ViewData["Title"] = "Menú Admin";
}
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="../css/menua.css" />
    <link href="https://fonts.googleapis.com/css2?family=Nunito:wght@400;600&display=swap" rel="stylesheet">
    <title>Sistema de Propuestas - Menú Admin</title>
</head>
<body>
    <!-- Header general del sistema -->
    <header class="header">
        <a href="/">
            <img src="~/css/tec-logo.jpg" alt="Logo del Tecnológico de Costa Rica" class="tec-logo">
        </a>
        <div class="search-bar">
            <input type="text" placeholder="Buscar..." aria-label="Buscar propuestas">
            <a href="/buscar">
                <img src="~/css/icons/lupa.svg" alt="Buscar" class="icon" aria-hidden="true">
            </a>
            <a href="/perfil">
                <img src="~/css/icons/perfil.svg" alt="Perfil" class="profile-pic" aria-label="Perfil">
            </a>
        </div>
    </header>

    <!-- Sidebar izquierdo con opciones adicionales -->
    <div class="sidebar">
        <div class="option">
            <a href="/propuestas">
                <img src="~/css/icons/propuesta.svg" alt="Mis Propuestas">
            </a>
            <span>Mis Propuestas</span>
        </div>
        <div class="option">
            <a href="/estadisticas">
                <img src="~/css/icons/estadisticas.svg" alt="Estadísticas">
            </a>
            <span>Estadísticas</span>
        </div>
        <div class="option">
            <a href="/usuarios">
                <img src="~/css/icons/usuarios.svg" alt="Usuarios">
            </a>
            <span>Usuarios</span>
        </div>
        <div class="exit-option">
            <a href="/salir">
                <img src="~/css/icons/salir.svg" alt="Salir">
            </a>
            <span>Salir</span>
        </div>
    </div>

    <!-- Contenido principal -->
    <div class="main-content">
        <h1>Propuestas Recibidas</h1>

        <!-- Filtro por Estado -->
        <div class="form-field">
            <label for="estado">Filtrar por estado:</label>
            <form method="get">
                <select id="estado" name="estadoId" onchange="this.form.submit()">
                    <option value="0">Todas</option>
                    @foreach (var estado in Model.EstadosPropuesta)
                    {
                        if (estado["ID"].ToString() == Model.SelectedEstadoId.ToString())
                        {
                            <option value="@estado["ID"]" selected>@estado["Nombre"]</option>
                        }
                        else
                        {
                            <option value="@estado["ID"]">@estado["Nombre"]</option>
                        }
                    }
                </select>
            </form>
        </div>

        <!-- Tabla de Propuestas con scroll -->
        <div class="propuestas-container">
            <table class="propuestas-table">
                <thead>
                    <tr>
                        <th>Nombre de la Propuesta</th>
                        <th>Estado</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var propuesta in Model.Propuestas)
                    {
                        <tr>
                            <td>@propuesta["NombrePropuesta"]</td>
                            <td>@propuesta["Estado"]</td>
                            <td>
                                <div class="dropdown">
                                    <button class="dropbtn">⋮</button>
                                    <div class="dropdown-content">
                                        <a href="/propuesta/asignar/@propuesta["ID"]">Asignar</a>
                                        <a href="/propuesta/evaluar/@propuesta["ID"]">Evaluar</a>
                                    </div>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</body>
</html>
