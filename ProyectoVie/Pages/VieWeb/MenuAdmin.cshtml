@page
@model ProyectoVie.Pages.VieWeb.MenuAdminModel
@{
    ViewData["Title"] = "Menú Admin";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Menú Admin</title>
    <link rel="stylesheet" href="../css/menua.css">
</head>
<body>
    <header>
        <div class="header-content">
            <div class="logo">
                <img src="/css/tec-logo.jpg" alt="Logo del Tecnológico de Costa Rica">
            </div>
            <form role="search">
                <input type="text" placeholder="Buscar propuesta..." aria-label="Buscar propuesta">
            </form>
            <nav class="header-icons">
                <a href="/perfil">
                    <img src="/css/icons/perfil.svg" alt="Icono de perfil">
                </a>
                <a href="#"><img src="/css/icons/search.svg" alt="Buscar"></a>
                <a href="#"><img src="/css/icons/notification.svg" alt="Notificaciones"></a>
            </nav>
        </div>
    </header>

    <aside class="sidebar">
        <nav>
            <ul>
                <li><a href="#">Estadísticas e informes</a></li>
                <li><a href="#">Usuarios</a></li>
                <li><a href="#">Propuestas</a></li>
            </ul>
        </nav>
    </aside>

    <main>
        <h1>Propuestas Recibidas</h1>
        
        <!-- Filtro por Estado -->
        <div class="filter">
            <label for="estado">Filtrar por estado:</label>
            <form method="get">
                <select id="estado" name="estadoId" onchange="this.form.submit()">
                    <option value="0">Todas</option>
                    @foreach (var estado in Model.EstadosPropuesta)
                    {
                        if (estado["ID"].ToString() == Model.SelectedEstadoId.ToString())
                        {
                            <option value="@estado["ID"]" selected>@estado["Nombre"]</option>
                        }
                        else
                        {
                            <option value="@estado["ID"]">@estado["Nombre"]</option>
                        }
                    }
                </select>
            </form>
        </div>

        <!-- Tabla de Propuestas -->
        <table class="propuestas-table">
            <thead>
                <tr>
                    <th>Nombre de la Propuesta</th>
                    <th>Estado</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var propuesta in Model.Propuestas)
                {
                    <tr>
                        <td>@propuesta["NombrePropuesta"]</td>
                        <td>@propuesta["Estado"]</td>
                        <td>
                            <div class="dropdown">
                                <button class="dropbtn">⋮</button>
                                <div class="dropdown-content">
                                    <!-- Redirige a la página de Asignar Evaluadores -->
                                    <a href="/AsignarEvaluadores?propuestaId=@propuesta["ID"]">Asignar</a>
                                    <a href="/propuesta/evaluar/@propuesta["ID"]">Evaluar</a>
                                </div>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

    </main>
</body>
</html>
