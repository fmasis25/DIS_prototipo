@page
@model ProyectoVie.Pages.VieWeb.EvaluadoresModel
@{
    ViewData["Title"] = "Asignar Evaluadores";
}
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="../css/menua.css" />
    <link href="https://fonts.googleapis.com/css2?family=Nunito:wght@400;600&display=swap" rel="stylesheet">
    <title>Asignar Evaluadores</title>
</head>
<body>
    <!-- Header general del sistema -->
    <header class="header">
        <a href="/">
            <img src="~/css/tec-logo.png" alt="Logo del Tecnológico de Costa Rica" class="tec-logo">
        </a>
        <a href="/VieWeb/MiPerfil">
            <img src="~/css/icons/perfil.svg" alt="Perfil" class="profile-pic" aria-label="Perfil">
        </a>
    </header>
    <!-- Sidebar izquierdo -->
    <div class="sidebar">
        <div class="option">
            <a href="/VieWeb/MenuAdmin">
                <img src="~/css/icons/propuesta.svg" alt="Propuestas">
            </a>
            <span>Propuestas</span>
        </div>
        <div class="option">
            <a href="/VieWeb/Graficos">
                <img src="~/css/icons/estadisticas.svg" alt="Estadísticas">
            </a>
            <span>Estadísticas</span>
        </div>
        <div class="option">
            <a href="/VieWeb/Usuarios">
                <img src="~/css/icons/usuarios.svg" alt="Usuarios">
            </a>
            <span>Usuarios</span>
        </div>
        <div class="exit-option">
            <a href="/VieWeb/Login">
                <img src="~/css/icons/salir.svg" alt="Salir">
            </a>
            <span>Salir</span>
        </div>
    </div>

    <!-- Contenido principal -->
    <div class="main-content">
        <h1>Asignar Evaluadores</h1>

        <!-- Tabla de Evaluadores con formato de MenuAdmin -->
        <div class="propuestas-container">
            <table class="propuestas-table">
                <thead>
                    <tr>
                        <th>Nombre</th>
                        <th>Rol</th>
                        <th>Acción</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var usuario in Model.UsuariosConRol2)
                    {
                        <tr>
                            <td>@usuario.Nombre</td>
                            <td>@usuario.Rol</td>
                            <td>
                                <form method="post">
                                    <input type="hidden" name="usuarioId" value="@usuario.ID" />
                                    <input type="hidden" name="PropuestaId" value="@Model.PropuestaId" /> <!-- Campo oculto para PropuestaId -->
                                    <button type="submit" class="assign-btn" formaction="/VieWeb/Evaluadores?handler=Asignar">Asignar</button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</body>
</html>
