@page
@model ProyectoVie.Pages.VieWeb.AsignarEvaluadoresModel
@{
    ViewData["Title"] = "Asignar Propuesta";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Asignar Propuesta</title>
    <link rel="stylesheet" href="../css/asignarevaluadores.css">
</head>
<body>
    <header>
        <div class="header-content">
            <div class="logo">
                <img src="/css/tec-logo.jpg" alt="Logo del Tecnológico de Costa Rica">
            </div>
            <form role="search">
                <input type="text" placeholder="Buscar usuario..." aria-label="Buscar usuario">
            </form>
            <nav class="header-icons">
                <a href="/perfil">
                    <img src="/css/icons/perfil.svg" alt="Icono de perfil">
                </a>
                <a href="#"><img src="/css/icons/search.svg" alt="Buscar"></a>
                <a href="#"><img src="/css/icons/notification.svg" alt="Notificaciones"></a>
            </nav>
        </div>
    </header>

    <aside class="sidebar">
        <nav>
            <ul>
                <li><a href="#">Estadísticas e informes</a></li>
                <li><a href="#">Usuarios</a></li>
                <li><a href="#">Propuestas</a></li>
            </ul>
        </nav>
    </aside>

    <main>
        <h1>Asignar Propuesta</h1>

        <!-- Tabla de Usuarios con Rol 2 -->
        <table class="usuarios-table">
            <thead>
                <tr>
                    <th>Nombre</th>
                    <th>Acción</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var usuario in Model.UsuariosConRol2)
                {
                    <tr>
                        <td>@usuario.NombreCompleto</td>
                        <td>
                            <button class="assign-btn" onclick="asignarPropuesta(@usuario.ID)">Asignar</button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </main>

    <script>
        function asignarPropuesta(usuarioId) {
            if (confirm('¿Está seguro de que desea asignar esta propuesta a este usuario?')) {
                window.location.href = `/AsignarPropuesta/Asignar?usuarioId=${usuarioId}`;
            }
        }
    </script>
</body>
</html>
